@page "/documentos/editar/{Id:long}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "documentos.editar")]
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Web
@using System.Globalization
@using System.Text
@using VectorWeb.Models
@using VectorWeb.Repositories
@inject IRepository<MaeDocumento> RepoDocs
@inject IRepository<MaeRecluso> RepoReclusos
@inject IJSRuntime JS
@inject NavigationManager Navegador
@rendermode InteractiveServer

<PageTitle>Ficha de Documento - Vector</PageTitle>

<style>
    /* --- ESTILOS PARA PANTALLA --- */
    .ficha-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 1.5rem;
    }

    .card-ficha {
        border: none;
        border-radius: 12px;
    }

    .label-info {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #6c757d;
        margin-bottom: 0.25rem;
        display: block;
    }

    .data-box {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 0.6rem 1rem;
        font-size: 0.95rem;
        color: #212529;
        min-height: 45px;
        display: flex;
        align-items: center;
    }

    .icon-field {
        color: #0d6efd;
        margin-right: 10px;
        font-size: 1.1rem;
    }

    .descripcion-acciones {
        border: 1px dashed #cfe2ff;
        border-radius: 10px;
        padding: 0.75rem;
        background: #f8fbff;
    }

    .chip-accion {
        border-radius: 999px;
    }

    /* --- ESTILOS PARA IMPRESIÓN (BLINDAJE Y LIMPIEZA) --- */
    @@media print {
        /* 1. Ocultar todo lo que no sea la ficha técnica */
        .no-print, .btn, .spinner-border, .mb-3, .card-footer, .search-panel, .input-group-text {
            display: none !important;
        }
        /* 2. Ajuste de contenedores */
        .container {
            width: 100% !important;
            max-width: none !important;
            padding: 0 !important;
            margin: 0 !important;
        }

        .card-ficha {
            box-shadow: none !important;
            border: 1px solid #000 !important;
        }
        /* 3. Convertir el header azul en un título sobrio para reporte */
        .ficha-header {
            background: #f0f0f0 !important;
            color: black !important;
            border-bottom: 2px solid #000 !important;
            border-radius: 0 !important;
        }

        .badge {
            border: 1px solid #000 !important;
            color: #000 !important;
        }
        /* 4. Asegurar que los inputs y textareas se vean como texto plano */
        input, textarea, .form-control {
            border: none !important;
            padding: 0 !important;
            background: transparent !important;
            resize: none !important;
            overflow: visible !important;
            height: auto !important;
            font-size: 11pt !important;
        }

        .label-info {
            color: #333 !important;
            border-bottom: 1px solid #ddd;
            margin-top: 10px;
        }

        .data-box {
            border: none !important;
            background: none !important;
            padding-left: 0 !important;
        }
        /* 5. Forzar el renderizado de la página completa */
        body {
            background-color: white !important;
        }
    }
</style>

<div class="container py-4">
    <div class="mb-3 no-print">
        <a href="documentos" class="btn btn-link text-decoration-none p-0 text-muted">
            <i class="bi bi-arrow-left"></i> Volver a la Bandeja de Documentos
        </a>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5 no-print">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Obteniendo información del documento...</p>
        </div>
    }
    else if (documento is null)
    {
        <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
            <div>No se ha podido localizar el documento solicitado.</div>
        </div>
    }
    else
    {
        <div class="card shadow-sm card-ficha">
            <div class="ficha-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0 fw-bold"><i class="bi bi-file-earmark-text me-2 no-print"></i>Detalle del Documento</h3>
                <span class="badge bg-light text-primary py-2 px-3">ID: @documento.IdDocumento</span>
            </div>

            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Número Oficial</span>
                        <div class="data-box"><i class="bi bi-hash icon-field no-print"></i> @(documento.NumeroOficial ?? "Sin Nro")</div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Número Interno</span>
                        <div class="data-box"><i class="bi bi-bookmark icon-field no-print"></i> @documento.NumeroInterno</div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Tipo de Documento</span>
                        <div class="data-box"><i class="bi bi-files icon-field no-print"></i> @documento.IdTipoNavigation?.Nombre</div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Fecha Registro</span>
                        <div class="data-box"><i class="bi bi-calendar-event icon-field no-print"></i> @documento.FechaCreacion?.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    <div class="col-md-6">
                        <span class="label-info">Oficina Actual</span>
                        <div class="data-box"><i class="bi bi-building icon-field no-print"></i> @documento.IdOficinaActualNavigation?.Nombre</div>
                    </div>
                    <div class="col-md-6">
                        <span class="label-info">Estado en el Sistema</span>
                        <div class="data-box">
                            <i class="bi bi-info-circle icon-field no-print"></i>
                            <span class="fw-bold">@documento.IdEstadoActualNavigation?.Nombre</span>
                        </div>
                    </div>

                    @* Panel de Vinculación - Oculto en impresión *@
                    <div class="col-12 no-print">
                        <div class="search-panel p-3 bg-light rounded-3 border">
                            <label class="fw-bold mb-2 text-primary"><i class="bi bi-people-fill me-1"></i> Vincular PPL al Asunto</label>
                            <div class="row g-2">
                                <div class="col-md-7 position-relative">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                        <input type="text" class="form-control shadow-none" placeholder="Buscar por nombre o CI..."
                                               @bind-value="busquedaReclusoAsunto" @bind-value:event="oninput"
                                               @onfocus="MostrarSugerenciasPPL" @onblur="OcultarSugerenciasPPLAsync" @onkeydown="ManejarTecladoPPL" />
                                    </div>

                                    @if (mostrarSugerenciasPPL && reclusosFiltradosAsunto.Any())
                                    {
                                        <div class="list-group position-absolute start-0 end-0 shadow-lg border-0 mt-1" style="z-index: 1000;">
                                            @for (var i = 0; i < reclusosFiltradosAsunto.Count; i++)
                                            {
                                                var recluso = reclusosFiltradosAsunto[i];
                                                var activeClass = i == indicePPLSeleccionado ? "active" : "";
                                                <button type="button" class="list-group-item list-group-item-action @activeClass small py-2" @onclick="() => AgregarReclusoAsunto(recluso)">
                                                    <strong>@recluso.NombreCompleto</strong> <span class="opacity-75">· @recluso.Documento</span>
                                                </button>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="col-md-5 d-flex gap-2">
                                    <button type="button" class="btn btn-primary btn-sm px-3 shadow-sm" @onclick="InsertarReclusosEnAsunto" disabled="@(!reclusosSeleccionadosAsunto.Any())">
                                        <i class="bi bi-pencil-square me-1"></i> Insertar en Asunto
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm px-3" @onclick="LimpiarReclusosAsunto" disabled="@(!reclusosSeleccionadosAsunto.Any())">
                                        Limpiar
                                    </button>
                                </div>
                            </div>

                            @if (reclusosSeleccionadosAsunto.Any())
                            {
                                <div class="mt-2 d-flex flex-wrap gap-1">
                                    @foreach (var recluso in reclusosSeleccionadosAsunto)
                                    {
                                        <span class="badge bg-white text-primary border border-primary-subtle d-inline-flex align-items-center gap-2 py-2 px-3">
                                            @recluso.NombreCompleto
                                            <i class="bi bi-x-circle-fill text-danger cursor-pointer" @onclick="() => QuitarReclusoAsunto(recluso.IdRecluso)"></i>
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-12">
                        <span class="label-info">Asunto / Título</span>
                        <InputText class="form-control border-primary-subtle fw-semibold"
                                   @bind-Value="documento.Asunto"
                                   placeholder="Ingrese el asunto del documento" />
                    </div>

                    <div class="col-12">
                        <span class="label-info">Descripción Detallada</span>
                        <InputTextArea class="form-control" style="min-height: 150px;"
                                       @bind-Value="documento.Descripcion"
                                       placeholder="Ingrese una descripción" />

                        <div class="descripcion-acciones mt-2 no-print">
                            <div class="small text-muted fw-semibold mb-2">Acciones frecuentes (Uruguay): click para insertar en descripción</div>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var accion in accionesSugeridasDescripcion)
                                {
                                    <button type="button"
                                            class="btn btn-outline-primary btn-sm chip-accion"
                                            title="@(accion.Texto)"
                                            @onclick="() => InsertarAccionEnDescripcion(accion)">
                                        @accion.Titulo
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(mensajeError))
                {
                    <div class="alert alert-danger mt-4 mb-0 no-print">@mensajeError</div>
                }

                @if (!string.IsNullOrWhiteSpace(mensajeExito))
                {
                    <div class="alert alert-success mt-4 mb-0 no-print">@mensajeExito</div>
                }
            </div>

            <div class="card-footer bg-white p-3 border-top-0 d-flex justify-content-end no-print">
                <button class="btn btn-primary btn-sm me-2 shadow-sm" @onclick="GuardarCambios" disabled="@guardando">
                    @if (guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    <i class="bi bi-save me-1"></i> Guardar Cambios
                </button>
                <button class="btn btn-outline-primary btn-sm me-2" @onclick="Imprimir">
                    <i class="bi bi-printer me-1"></i> Imprimir Reporte
                </button>
                <button class="btn btn-outline-secondary btn-sm" @onclick="VolverABandeja">
                    Cancelar
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public long Id { get; set; }

    private MaeDocumento? documento;
    private bool cargando = true;
    private bool guardando;
    private string? mensajeError;
    private string? mensajeExito;
    private List<MaeRecluso> reclusosActivos = new();
    private string busquedaReclusoAsunto = string.Empty;
    private List<MaeRecluso> reclusosFiltradosAsunto = new();
    private List<MaeRecluso> reclusosSeleccionadosAsunto = new();
    private int indicePPLSeleccionado = -1;
    private bool mostrarSugerenciasPPL;
    private readonly List<AccionDescripcion> accionesSugeridasDescripcion =
    [
        new("Salida transitoria", "Gestión de salida transitoria: se verifica conducta, clasificación, informe técnico criminológico y requisitos administrativos del centro para su eventual elevación judicial."),
        new("Libertad anticipada", "Gestión de libertad anticipada: se deja constancia de antecedentes, cómputo de pena, evolución del proceso de rehabilitación y documentación a remitir a sede competente."),
        new("Sanción disciplinaria", "Actuación disciplinaria intramuros: se registra el hecho, descargos, resolución interna, plazo de sanción y notificación al PPL conforme reglamentación vigente."),
        new("Traslado de unidad", "Gestión de traslado de unidad: se documentan motivos de seguridad/tratamiento, cupo disponible, informes médicos/sociales y coordinación interinstitucional."),
        new("Visita extraordinaria", "Trámite de visita extraordinaria: se incorpora solicitud, fundamentos, evaluación del recinto y autorización/denegatoria con notificación correspondiente."),
        new("Audiencia judicial", "Coordinación por audiencia judicial: se comunica fecha/hora de comparecencia, custodia asignada, logística de traslado y constancia de cumplimiento."),
        new("Requisa e incautación", "Actuación de requisa e incautación: se registra procedimiento, elementos incautados, cadena de custodia y comunicación a autoridad policial/judicial si corresponde."),
        new("Derivación sanitaria", "Gestión de derivación sanitaria: se agrega diagnóstico inicial, indicación médica, salida custodiada y resultado de atención para seguimiento clínico.")
    ];

    protected override async Task OnParametersSetAsync()
    {
        cargando = true;
        try
        {
            var reclusosData = await RepoReclusos.GetAllAsync();
            reclusosActivos = reclusosData.Where(r => r.Activo == true).OrderBy(r => r.NombreCompleto).ToList();

            var docs = await RepoDocs.GetFilteredAsync(
                d => d.IdDocumento == Id,
                "IdTipoNavigation,IdOficinaActualNavigation,IdEstadoActualNavigation"
            );
            documento = docs.FirstOrDefault();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task GuardarCambios()
    {
        if (documento is null || string.IsNullOrWhiteSpace(documento.Asunto))
        {
            mensajeError = "El asunto es obligatorio.";
            return;
        }

        guardando = true;
        try
        {
            await RepoDocs.UpdateAsync(documento);
            mensajeExito = "Información actualizada correctamente.";
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
        finally
        {
            guardando = false;
        }
    }

    private async Task Imprimir() => await JS.InvokeVoidAsync("window.print");

    private void FiltrarReclusosAsunto(ChangeEventArgs e)
    {
        busquedaReclusoAsunto = e.Value?.ToString() ?? "";
        if (string.IsNullOrWhiteSpace(busquedaReclusoAsunto))
        {
            reclusosFiltradosAsunto.Clear();
            return;
        }

        reclusosFiltradosAsunto = reclusosActivos
            .Where(r => r.NombreCompleto.Contains(busquedaReclusoAsunto, StringComparison.OrdinalIgnoreCase) ||
                        (r.Documento ?? "").Contains(busquedaReclusoAsunto, StringComparison.OrdinalIgnoreCase))
            .Take(8).ToList();
        indicePPLSeleccionado = -1;
        mostrarSugerenciasPPL = true;
    }

    private void MostrarSugerenciasPPL() => mostrarSugerenciasPPL = true;

    private async Task OcultarSugerenciasPPLAsync()
    {
        await Task.Delay(200); // Delay para permitir click
        mostrarSugerenciasPPL = false;
    }

    private Task ManejarTecladoPPL(KeyboardEventArgs e)
    {
        if (!reclusosFiltradosAsunto.Any()) return Task.CompletedTask;
        if (e.Key == "ArrowDown") indicePPLSeleccionado = Math.Min(indicePPLSeleccionado + 1, reclusosFiltradosAsunto.Count - 1);
        else if (e.Key == "ArrowUp") indicePPLSeleccionado = Math.Max(indicePPLSeleccionado - 1, 0);
        else if (e.Key == "Enter" && indicePPLSeleccionado >= 0) AgregarReclusoAsunto(reclusosFiltradosAsunto[indicePPLSeleccionado]);
        return Task.CompletedTask;
    }

    private void AgregarReclusoAsunto(MaeRecluso recluso)
    {
        if (!reclusosSeleccionadosAsunto.Any(s => s.IdRecluso == recluso.IdRecluso))
            reclusosSeleccionadosAsunto.Add(recluso);
        busquedaReclusoAsunto = "";
        mostrarSugerenciasPPL = false;
    }

    private void QuitarReclusoAsunto(int id) => reclusosSeleccionadosAsunto.RemoveAll(r => r.IdRecluso == id);
    private void LimpiarReclusosAsunto() => reclusosSeleccionadosAsunto.Clear();

    private void InsertarReclusosEnAsunto()
    {
        if (documento is null || !reclusosSeleccionadosAsunto.Any()) return;
        var nombres = string.Join(", ", reclusosSeleccionadosAsunto.Select(r => r.NombreCompleto));
        documento.Asunto = $"{documento.Asunto} | PPL(s): {nombres}";
        LimpiarReclusosAsunto();
    }

    private void InsertarAccionEnDescripcion(AccionDescripcion accion)
    {
        if (documento is null) return;

        if (string.IsNullOrWhiteSpace(documento.Descripcion))
        {
            documento.Descripcion = accion.Texto;
            return;
        }

        documento.Descripcion = $"{documento.Descripcion}{Environment.NewLine}- {accion.Texto}";
    }

    private sealed record AccionDescripcion(string Titulo, string Texto);

    private void VolverABandeja() => Navegador.NavigateTo("documentos");
}
