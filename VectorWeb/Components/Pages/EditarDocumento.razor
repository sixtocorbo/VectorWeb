@page "/documentos/editar/{Id:long}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "documentos.editar")]
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Web
@using VectorWeb.Models
@using VectorWeb.Repositories
@inject IRepository<MaeDocumento> RepoDocs
@inject IRepository<MaeRecluso> RepoReclusos
@inject IJSRuntime JS
@inject NavigationManager Navegador
@rendermode InteractiveServer

<PageTitle>Ficha de Documento - Vector</PageTitle>

<style>
    .ficha-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 1.5rem;
    }

    .card-ficha {
        border: none;
        border-radius: 12px;
    }

    .label-info {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #6c757d;
        margin-bottom: 0.25rem;
        display: block;
    }

    .data-box {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 0.6rem 1rem;
        font-size: 0.95rem;
        color: #212529;
        min-height: 45px;
        display: flex;
        align-items: center;
    }

    .data-text {
        white-space: pre-wrap;
        align-items: flex-start !important;
        padding-top: 0.75rem;
    }

    .icon-field {
        color: #0d6efd;
        margin-right: 10px;
        font-size: 1.1rem;
    }

    /* ESTILOS PARA IMPRESIÓN */
    @@media print {
        .btn, .spinner-border, .mb-3, .card-footer {
            display: none !important; /* Oculta botones y navegación al imprimir */
        }

        .container {
            width: 100%;
            max-width: none;
            padding: 0;
            margin: 0;
        }

        .card-ficha {
            box-shadow: none !important;
            border: 1px solid #ddd;
        }

        .ficha-header {
            background: #eee !important;
            color: black !important;
            border-bottom: 2px solid #000;
        }
    }
</style>

<div class="container py-4">
    <div class="mb-3">
        <a href="documentos" class="btn btn-link text-decoration-none p-0 text-muted">
            <i class="bi bi-arrow-left"></i> Volver a la Bandeja de Documentos
        </a>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Obteniendo información del documento...</p>
        </div>
    }
    else if (documento is null)
    {
        <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
            <div>No se ha podido localizar el documento solicitado.</div>
        </div>
    }
    else
    {
        <div class="card shadow-sm card-ficha">
            <div class="ficha-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0 fw-bold"><i class="bi bi-file-earmark-text me-2"></i>Detalle del Documento</h3>
                <span class="badge bg-light text-primary py-2 px-3">ID: @documento.IdDocumento</span>
            </div>

            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Número Oficial</span>
                        <div class="data-box"><i class="bi bi-hash icon-field"></i> @(documento.NumeroOficial ?? "Sin Nro")</div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Número Interno</span>
                        <div class="data-box"><i class="bi bi-bookmark icon-field"></i> @documento.NumeroInterno</div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Tipo de Documento</span>
                        <div class="data-box"><i class="bi bi-files icon-field"></i> @documento.IdTipoNavigation?.Nombre</div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <span class="label-info">Fecha Registro</span>
                        <div class="data-box"><i class="bi bi-calendar-event icon-field"></i> @documento.FechaCreacion?.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    <div class="col-md-6">
                        <span class="label-info">Oficina Actual</span>
                        <div class="data-box"><i class="bi bi-building icon-field"></i> @documento.IdOficinaActualNavigation?.Nombre</div>
                    </div>
                    <div class="col-md-6">
                        <span class="label-info">Estado en el Sistema</span>
                        <div class="data-box">
                            <i class="bi bi-info-circle icon-field"></i>
                            <span class="fw-bold">@documento.IdEstadoActualNavigation?.Nombre</span>
                        </div>
                    </div>

                    <div class="col-12">
                        <span class="label-info">Asunto / Título</span>
                        <InputText class="form-control border-primary-subtle bg-primary-subtle bg-opacity-10 fw-semibold"
                                   @bind-Value="documento.Asunto"
                                   placeholder="Ingrese el asunto del documento" />
                    </div>

                    <div class="col-12">
                        <div class="search-panel p-3">
                            <label class="label-custom mb-2"><i class="bi bi-people-fill me-1 text-primary"></i> Vincular PPL al Asunto</label>
                            <div class="row g-2">
                                <div class="col-md-7 position-relative">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                        <input type="text" class="form-control shadow-none" placeholder="Buscar por nombre o CI..."
                                               value="@busquedaReclusoAsunto" autocomplete="off"
                                               @oninput="FiltrarReclusosAsunto" @onfocus="MostrarSugerenciasPPL" @onkeydown="ManejarTecladoPPL" />
                                    </div>

                                    @if (reclusosFiltradosAsunto.Any())
                                    {
                                        <div class="list-group position-absolute start-0 end-0 shadow border-0 mt-1" style="z-index: 1000;">
                                            @for (var i = 0; i < reclusosFiltradosAsunto.Count; i++)
                                            {
                                                var recluso = reclusosFiltradosAsunto[i];
                                                var activeClass = i == indicePPLSeleccionado ? "active" : "";
                                                <button type="button" class="list-group-item list-group-item-action @activeClass small py-2" @onclick="() => AgregarReclusoAsunto(recluso)">
                                                    <strong>@recluso.NombreCompleto</strong> <span class="opacity-75">· @recluso.Documento</span>
                                                </button>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="col-md-5 d-flex gap-2">
                                    <button type="button" class="btn btn-primary btn-sm px-3 shadow-sm" @onclick="InsertarReclusosEnAsunto" disabled="@(!reclusosSeleccionadosAsunto.Any())">
                                        <i class="bi bi-pencil-square me-1"></i> Insertar
                                    </button>
                                    <button type="button" class="btn btn-light btn-sm px-3 border" @onclick="LimpiarReclusosAsunto" disabled="@(!reclusosSeleccionadosAsunto.Any())">
                                        Limpiar
                                    </button>
                                </div>
                            </div>

                            @if (reclusosSeleccionadosAsunto.Any())
                            {
                                <div class="mt-3 d-flex flex-wrap gap-1">
                                    @foreach (var recluso in reclusosSeleccionadosAsunto)
                                    {
                                        <span class="badge bg-white text-primary border border-primary-subtle d-inline-flex align-items-center gap-2 py-2 px-3 shadow-sm">
                                            @recluso.NombreCompleto
                                            <i class="bi bi-x-circle-fill text-danger cursor-pointer" style="cursor:pointer" @onclick="() => QuitarReclusoAsunto(recluso.IdRecluso)"></i>
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-12">
                        <span class="label-info">Descripción Detallada</span>
                        <InputTextArea class="form-control" style="min-height: 120px;"
                                       @bind-Value="documento.Descripcion"
                                       placeholder="Ingrese una descripción" />
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(mensajeError))
                {
                    <div class="alert alert-danger mt-4 mb-0">@mensajeError</div>
                }

                @if (!string.IsNullOrWhiteSpace(mensajeExito))
                {
                    <div class="alert alert-success mt-4 mb-0">@mensajeExito</div>
                }
            </div>

            <div class="card-footer bg-white p-3 border-top-0 d-flex justify-content-end">
                <button class="btn btn-primary btn-sm me-2" @onclick="GuardarCambios" disabled="@guardando">
                    @if (guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                    }
                    <i class="bi bi-save me-1"></i> Guardar Cambios
                </button>
                <button class="btn btn-outline-primary btn-sm me-2" @onclick="Imprimir">
                    <i class="bi bi-printer me-1"></i> Imprimir Ficha
                </button>
                <button class="btn btn-outline-secondary btn-sm" @onclick="VolverABandeja">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public long Id { get; set; }

    private MaeDocumento? documento;
    private bool cargando = true;
    private bool guardando;
    private string? mensajeError;
    private string? mensajeExito;
    private List<MaeRecluso> reclusosActivos = new();
    private string busquedaReclusoAsunto = string.Empty;
    private List<MaeRecluso> reclusosFiltradosAsunto = new();
    private List<MaeRecluso> reclusosSeleccionadosAsunto = new();
    private int indicePPLSeleccionado = -1;

    protected override async Task OnParametersSetAsync()
    {
        cargando = true;
        reclusosActivos = (await RepoReclusos.GetAllAsync())
            .Where(r => r.Activo == true)
            .OrderBy(r => r.NombreCompleto)
            .ToList();

        documento = await RepoDocs
            .GetQueryable("IdTipoNavigation,IdOficinaActualNavigation,IdEstadoActualNavigation")
            .FirstOrDefaultAsync(d => d.IdDocumento == Id);
        cargando = false;
    }

    private async Task GuardarCambios()
    {
        mensajeError = null;
        mensajeExito = null;

        if (documento is null)
        {
            mensajeError = "No se encontró el documento para actualizar.";
            return;
        }

        if (string.IsNullOrWhiteSpace(documento.Asunto))
        {
            mensajeError = "El asunto es obligatorio.";
            return;
        }

        guardando = true;
        try
        {
            await RepoDocs.UpdateAsync(documento);
            mensajeExito = "Documento actualizado correctamente.";
        }
        catch
        {
            mensajeError = "Ocurrió un problema al guardar los cambios.";
        }
        finally
        {
            guardando = false;
        }
    }

    private async Task Imprimir()
    {
        // Llama a la función de impresión nativa del navegador
        await JS.InvokeVoidAsync("window.print");
    }

    private void FiltrarReclusosAsunto(ChangeEventArgs e)
    {
        busquedaReclusoAsunto = e.Value?.ToString() ?? "";
        reclusosFiltradosAsunto = reclusosActivos
            .Where(r =>
                r.NombreCompleto.Contains(busquedaReclusoAsunto, StringComparison.OrdinalIgnoreCase) ||
                (r.Documento ?? string.Empty).Contains(busquedaReclusoAsunto, StringComparison.OrdinalIgnoreCase))
            .Take(8)
            .ToList();
        indicePPLSeleccionado = -1;
    }

    private void MostrarSugerenciasPPL() => FiltrarReclusosAsunto(new ChangeEventArgs { Value = busquedaReclusoAsunto });

    private Task ManejarTecladoPPL(KeyboardEventArgs e)
    {
        if (!reclusosFiltradosAsunto.Any()) return Task.CompletedTask;

        if (e.Key == "ArrowDown") indicePPLSeleccionado = Math.Min(indicePPLSeleccionado + 1, reclusosFiltradosAsunto.Count - 1);
        else if (e.Key == "ArrowUp") indicePPLSeleccionado = Math.Max(indicePPLSeleccionado - 1, 0);
        else if (e.Key == "Enter" && indicePPLSeleccionado >= 0) AgregarReclusoAsunto(reclusosFiltradosAsunto[indicePPLSeleccionado]);

        return Task.CompletedTask;
    }

    private void AgregarReclusoAsunto(MaeRecluso recluso)
    {
        if (!reclusosSeleccionadosAsunto.Any(s => s.IdRecluso == recluso.IdRecluso))
        {
            reclusosSeleccionadosAsunto.Add(recluso);
        }

        busquedaReclusoAsunto = "";
        reclusosFiltradosAsunto.Clear();
        indicePPLSeleccionado = -1;
    }

    private void QuitarReclusoAsunto(int idRecluso) => reclusosSeleccionadosAsunto.RemoveAll(r => r.IdRecluso == idRecluso);

    private void LimpiarReclusosAsunto() => reclusosSeleccionadosAsunto.Clear();

    private void InsertarReclusosEnAsunto()
    {
        if (documento is null || !reclusosSeleccionadosAsunto.Any()) return;

        var listaNombres = string.Join(", ", reclusosSeleccionadosAsunto.Select(r => r.NombreCompleto));
        var sufijo = $"PPL(s): {listaNombres}";

        documento.Asunto = string.IsNullOrWhiteSpace(documento.Asunto)
            ? sufijo
            : $"{documento.Asunto} | {sufijo}";
    }

    private void VolverABandeja() => Navegador.NavigateTo("documentos");
}
