@page "/configuracion/tipos-documento"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@attribute [Authorize(Policy = "configuracion.catalogos")]
@using VectorWeb.Models
@using VectorWeb.Repositories
@inject IRepository<CatTipoDocumento> RepoTipo
@inject IRepository<CfgTiemposRespuestum> RepoPlazos
@rendermode InteractiveServer

<h3>Gestión de Tipos de Documento</h3>

@if (!string.IsNullOrWhiteSpace(mensajeError))
{
    <AlertaScroll Mensaje="@mensajeError" Tipo="warning" IconoCss="bi bi-exclamation-triangle-fill" />
}

<div class="row mb-3">
    <div class="col-md-5">
        <input type="text" class="form-control" placeholder="Nombre del tipo..." @bind="nuevoNombre" />
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" placeholder="Código" @bind="nuevoCodigo" />
    </div>
    <div class="col-auto">
        <button class="btn btn-success" @onclick="Agregar">Agregar</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipo in listaTipos)
        {
            <tr>
                <td>@tipo.Nombre</td>
                <td>@tipo.Codigo</td>
                <td>
                    <button class="btn btn-danger btn-sm" disabled="@EsTipoProtegido(tipo)" @onclick="() => Eliminar(tipo.IdTipo)">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private IEnumerable<CatTipoDocumento> listaTipos = new List<CatTipoDocumento>();
    private readonly HashSet<string> codigosProtegidos = new(StringComparer.OrdinalIgnoreCase)
    {
        "ARC", "ASU", "COM", "EXP", "FOR", "INF", "MEM", "OFI", "ORD", "RAD", "RES", "CAR"
    };
    private string nuevoNombre = string.Empty;
    private string nuevoCodigo = string.Empty;
    private string mensajeError = string.Empty;

    protected override async Task OnInitializedAsync() => await Cargar();

    private async Task Cargar() => listaTipos = await RepoTipo.GetAllAsync();

    private bool EsTipoProtegido(CatTipoDocumento tipo)
        => codigosProtegidos.Contains(tipo.Codigo?.Trim() ?? string.Empty);

    private async Task Agregar()
    {
        if (!string.IsNullOrWhiteSpace(nuevoNombre) && !string.IsNullOrWhiteSpace(nuevoCodigo))
        {
            await RepoTipo.AddAsync(new CatTipoDocumento
            {
                Nombre = nuevoNombre.Trim(),
                Codigo = nuevoCodigo.Trim()
            });
            nuevoNombre = string.Empty;
            nuevoCodigo = string.Empty;
            await Cargar();
        }
    }

    private async Task Eliminar(int id)
    {
        var tipo = listaTipos.FirstOrDefault(t => t.IdTipo == id);
        if (tipo is not null && EsTipoProtegido(tipo))
        {
            mensajeError = $"No se puede eliminar el tipo de documento '{tipo.Nombre}' ({tipo.Codigo}).";
            return;
        }

        mensajeError = string.Empty;

        var plazosRelacionados = await RepoPlazos.GetFilteredAsync(p => p.IdTipoDocumento == id);
        if (plazosRelacionados.Any())
        {
            var nombreTipo = tipo?.Nombre ?? "seleccionado";
            mensajeError = $"No se puede eliminar el tipo de documento '{nombreTipo}' porque está siendo utilizado en la configuración de plazos u otros registros relacionados.";
            return;
        }

        try
        {
            await RepoTipo.DeleteAsync(id);
            await Cargar();
        }
        catch (DbUpdateException ex) when (EsErrorPorRegistroRelacionado(ex))
        {
            var nombreTipo = tipo?.Nombre ?? "seleccionado";
            mensajeError = $"No se puede eliminar el tipo de documento '{nombreTipo}' porque está siendo utilizado en la configuración de plazos u otros registros relacionados.";
        }
    }

    private static bool EsErrorPorRegistroRelacionado(Exception ex)
    {
        for (var actual = ex; actual is not null; actual = actual.InnerException!)
        {
            if (actual.Message.Contains("REFERENCE constraint", StringComparison.OrdinalIgnoreCase)
                || actual.Message.Contains("conflicted with", StringComparison.OrdinalIgnoreCase)
                || actual.Message.Contains("FK__", StringComparison.OrdinalIgnoreCase))
            {
                return true;
            }
        }

        return false;
    }
}
