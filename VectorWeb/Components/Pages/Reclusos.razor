@page "/reclusos"
@using VectorWeb.Models
@using VectorWeb.Repositories
@inject IRepository<MaeRecluso> Repositorio
@inject IJSRuntime JS
@rendermode InteractiveServer

<h3>Listado de Reclusos</h3>

<div class="mb-3">
    <a href="reclusos/nuevo" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo Recluso
    </a>
</div>

@if (listaReclusos == null)
{
    <p><em>Cargando datos...</em></p>
}
else
{
    <div class="mb-3">
        <input type="text"
               class="form-control"
               placeholder="Buscar por nombre o documento..."
               @bind="textoBusqueda"
               @bind:event="oninput" />
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre Completo</th>
                <th>Documento</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recluso in ReclusosFiltrados)
            {
                <tr>
                    <td>@recluso.IdRecluso</td>
                    <td>@recluso.NombreCompleto</td>
                    <td>@recluso.Documento</td>
                    <td>
                        @if (recluso.Activo == true)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {

                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>
                        <a href="reclusos/editar/@recluso.IdRecluso" class="btn btn-primary btn-sm">
                            Editar
                        </a>
                        <button class="btn btn-danger btn-sm ms-2" @onclick="() => ConfirmarEliminacion(recluso)">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // Esta es tu zona de variables (igual que en VB.NET)
    private IEnumerable<MaeRecluso> listaReclusos = [];
    private string textoBusqueda = string.Empty;

    private IEnumerable<MaeRecluso> ReclusosFiltrados =>
        listaReclusos.Where(CoincideBusqueda);

    private bool CoincideBusqueda(MaeRecluso recluso)
    {
        if (string.IsNullOrWhiteSpace(textoBusqueda))
        {
            return true;
        }

        var terminos = textoBusqueda
            .Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);

        var textoRecluso = $"{recluso.NombreCompleto ?? string.Empty} {recluso.Documento ?? string.Empty}";

        return terminos.All(termino =>
            textoRecluso.Contains(termino, StringComparison.OrdinalIgnoreCase));
    }

    // Este evento es como el "Form_Load"
    protected override async Task OnInitializedAsync()
    {
        // Usamos el repositorio para traer todos los datos
        listaReclusos = await Repositorio.GetAllAsync();
    }

    private async Task ConfirmarEliminacion(MaeRecluso recluso)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Estás seguro de que deseas eliminar a {recluso.NombreCompleto}?");

        if (confirmado)
        {
            await Repositorio.DeleteAsync(recluso.IdRecluso);
            listaReclusos = await Repositorio.GetAllAsync();
        }
    }
}
