    private void PaginaPadreAnterior() { if (PaginaPadreEfectiva > 1) paginaPadreActual--; }
    private void PaginaPadreSiguiente() { if (PaginaPadreEfectiva < TotalPaginasPadre) paginaPadreActual++; }
