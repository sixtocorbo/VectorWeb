@page "/renovaciones/editar/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "renovaciones.gestionar")]
@using VectorWeb.Models
@using VectorWeb.Repositories
@using VectorWeb.Services
@inject RenovacionesService Service
@inject IRepository<MaeRecluso> RepoReclusos
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="container p-4">
    <h3>@(Id == 0 ? "Nueva Salida" : "Editar Salida")</h3>

    <EditForm Model="modelo" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />

        <div class="row mb-3">
            <div class="col-md-6">
                <label>Recluso</label>
                <select class="form-select" @bind="modelo.IdRecluso" disabled="@(Id > 0)">
                    <option value="0">-- Seleccione --</option>
                    @foreach (var r in reclusos)
                    {
                        <option value="@r.IdRecluso">@r.NombreCompleto</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label>Lugar de Trabajo</label>
                <InputText class="form-control" @bind-Value="modelo.LugarTrabajo" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label>Inicio</label>
                <InputDate class="form-control" @bind-Value="modelo.FechaInicio" />
            </div>
            <div class="col-md-4">
                <label>Vencimiento</label>
                <InputDate class="form-control" @bind-Value="modelo.FechaVencimiento" />
            </div>
            <div class="col-md-4">
                <label>Notificación Juez</label>
                <InputDate class="form-control" @bind-Value="modelo.FechaNotificacionJuez" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label>Horario</label>
                <InputText class="form-control" @bind-Value="modelo.Horario" />
            </div>
            <div class="col-md-6">
                <label>Custodia</label>
                <InputText class="form-control" @bind-Value="modelo.DetalleCustodia" />
            </div>
        </div>

        <div class="card mb-3 bg-light">
            <div class="card-body">
                <h6>Autorización</h6>
                <div class="row">
                    <div class="col-md-4">
                        <select class="form-select" @bind="codigoAutorizacion">
                            <option value="">(Seleccione)</option>
                            <option value="RESOLUCION_JUEZ">Resolución Juez</option>
                            <option value="ACTA">Acta</option>
                        </select>
                    </div>
                    <div class="col-md-8">
                        <input type="text"
                               class="form-control"
                               placeholder="Descripción de la autorización"
                               @bind="descAutorizacion" />
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label>Observaciones Adicionales</label>
            <InputTextArea class="form-control" rows="3" @bind-Value="observacionesUsuario" />
        </div>

        <div class="mb-3">
            <label>Documentos Vinculados</label>
            <div class="input-group mb-2">
                <input type="number" class="form-control" placeholder="ID Documento" @bind="idDocAgregar" />
                <button type="button" class="btn btn-outline-secondary" @onclick="AgregarDoc">Agregar ID</button>
            </div>

            <div class="input-group mb-2">
                <input type="text" class="form-control" placeholder="Buscar por asunto/descripcion" @bind="filtroDocumento" />
                <button type="button" class="btn btn-outline-primary" @onclick="BuscarCandidatos">Buscar candidatos</button>
            </div>
            <small class="text-muted">Las sugerencias por texto pueden incluir homónimos; verifique el contenido del documento antes de vincular.</small>

            @if (!string.IsNullOrWhiteSpace(mensajeDocumento))
            {
                <div class="alert alert-warning mt-2 mb-2 py-2">@mensajeDocumento</div>
            }

            @if (documentosCandidatos.Count > 0)
            {
                <ul class="list-group mb-2">
                    @foreach (var doc in documentosCandidatos)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@doc.Texto</span>
                            <button type="button" class="btn btn-sm btn-outline-success" @onclick="() => AgregarDoc(doc.IdDocumento)">Vincular</button>
                        </li>
                    }
                </ul>
            }

            <ul class="list-group mt-2">
                @foreach (var docId in idsDocumentos)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Documento ID: @docId
                        <button type="button" class="btn btn-sm btn-danger" @onclick="() => RemoverDoc(docId)">X</button>
                    </li>
                }
            </ul>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="renovaciones" class="btn btn-secondary">Cancelar</a>
    </EditForm>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private TraSalidasLaborale modelo = new()
    {
        FechaInicio = DateTime.Today,
        FechaVencimiento = DateTime.Today.AddMonths(1),
        Activo = true,
        LugarTrabajo = string.Empty
    };

    private IEnumerable<MaeRecluso> reclusos = [];

    private string codigoAutorizacion = string.Empty;
    private string descAutorizacion = string.Empty;
    private string observacionesUsuario = string.Empty;

    private List<long> idsDocumentos = [];
    private long idDocAgregar;
    private string mensajeDocumento = string.Empty;
    private string filtroDocumento = string.Empty;
    private List<DocumentoRespaldoDto> documentosCandidatos = [];

    protected override async Task OnInitializedAsync()
    {
        reclusos = await RepoReclusos.GetAllAsync();

        if (Id <= 0)
        {
            return;
        }

        var existente = await Service.ObtenerPorIdAsync(Id);
        if (existente is null)
        {
            return;
        }

        modelo = existente;
        var parsed = Service.ParsearObservaciones(modelo.Observaciones);
        codigoAutorizacion = parsed.Codigo;
        descAutorizacion = parsed.Descripcion;
        observacionesUsuario = parsed.Observacion;

        idsDocumentos = existente.TraSalidasLaboralesDocumentoRespaldos
            .Select(x => x.IdDocumento)
            .ToList();

        await BuscarCandidatos();
    }

    private async Task BuscarCandidatos()
    {
        mensajeDocumento = string.Empty;

        var nombreRecluso = reclusos.FirstOrDefault(r => r.IdRecluso == modelo.IdRecluso)?.NombreCompleto ?? string.Empty;
        var filtro = string.IsNullOrWhiteSpace(filtroDocumento) ? nombreRecluso : filtroDocumento;

        if (string.IsNullOrWhiteSpace(filtro))
        {
            documentosCandidatos = [];
            return;
        }

        documentosCandidatos = await Service.BuscarDocumentosCandidatos(modelo.IdRecluso, filtro);
    }

    private async Task AgregarDoc()
    {
        await AgregarDoc(idDocAgregar);
    }

    private async Task AgregarDoc(long idDocumento)
    {
        mensajeDocumento = string.Empty;

        if (idDocumento <= 0)
        {
            mensajeDocumento = "Debe ingresar un ID de documento válido.";
            return;
        }

        if (idsDocumentos.Contains(idDocumento))
        {
            mensajeDocumento = "El documento ya está vinculado.";
            return;
        }

        var existe = await Service.ExisteDocumentoAsync(idDocumento);
        if (!existe)
        {
            mensajeDocumento = $"No existe un documento con ID {idDocumento}.";
            return;
        }

        idsDocumentos.Add(idDocumento);
        idDocAgregar = 0;
    }

    private void RemoverDoc(long idDocumento)
    {
        idsDocumentos.Remove(idDocumento);
    }

    private async Task Guardar()
    {
        mensajeDocumento = string.Empty;

        try
        {
            await Service.GuardarAsync(modelo, idsDocumentos, codigoAutorizacion, descAutorizacion, observacionesUsuario);
            Nav.NavigateTo("renovaciones");
        }
        catch (InvalidOperationException ex)
        {
            mensajeDocumento = ex.Message;
        }
    }
}
