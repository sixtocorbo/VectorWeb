@page "/documentos/historial/{Id:long}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "documentos.ver")]
@using Microsoft.EntityFrameworkCore
@using VectorWeb.Models
@using VectorWeb.Repositories
@inject IRepository<MaeDocumento> RepoDocs
@inject IRepository<TraMovimiento> RepoMovimientos
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Historial del Documento - Vector</PageTitle>

<style>
    /* --- ESTILOS PARA PANTALLA --- */
    .timeline {
        position: relative;
        padding-left: 3rem;
        margin-left: 1rem;
        border-left: 3px solid #dee2e6;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 2rem;
    }

        .timeline-item::before {
            content: "";
            position: absolute;
            left: -3.7rem;
            top: 0.5rem;
            width: 1.4rem;
            height: 1.4rem;
            border-radius: 50%;
            background-color: #fff;
            border: 4px solid #0d6efd;
            z-index: 1;
            box-shadow: 0 0 0 4px #fff;
        }

        .timeline-item.linked-doc::before {
            border-color: #ffc107;
        }

    .card-movimiento {
        border: none;
        border-radius: 12px;
        transition: transform 0.2s;
    }

        .card-movimiento:hover {
            transform: translateX(5px);
        }

    .office-path {
        background: #f8f9fa;
        padding: 0.75rem;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* --- ESTILOS DE IMPRESIÓN (BLINDAJE TOTAL) --- */
    /* Usamos @@ para que Blazor no lo confunda con código C# */
    @@media print {
        /* 1. Ocultar elementos de navegación y botones */
        .no-print, .sidebar, .navbar, .btn, .breadcrumb, nav, footer {
            display: none !important;
        }
        /* 2. Expandir contenedores y resetear márgenes para papel */
        .container, .container-fluid, body, html {
            width: 100% !important;
            max-width: none !important;
            margin: 0 !important;
            padding: 0 !important;
            background-color: #fff !important;
        }
        /* 3. Asegurar que la línea de tiempo sea visible y no tenga scroll */
        .timeline {
            border-left: 2px solid #333 !important;
            overflow: visible !important;
            display: block !important;
        }
        /* 4. Evitar que un movimiento se corte a la mitad entre dos hojas */
        .timeline-item {
            page-break-inside: avoid !important;
            break-inside: avoid !important;
        }

        .card-movimiento {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
            transform: none !important;
        }
        /* 5. Forzar impresión de colores y fondos */
        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
        /* 6. Ajustes de títulos para el reporte */
        h2, h3, h4, h5 {
            color: #000 !important;
        }

        .card {
            border: 1px solid #eee !important;
        }

        .office-path {
            background-color: #f0f0f0 !important;
            border: 1px solid #ccc !important;
        }
    }
</style>

<div class="container py-4">
    @* Encabezado de la página - Oculto en impresión *@
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div>
            <h2 class="h3 mb-0 fw-bold"><i class="bi bi-clock-history text-primary me-2"></i>Historial del Expediente</h2>
            <p class="text-muted small mb-0">Trazabilidad completa de movimientos y actuaciones.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary shadow-sm" @onclick="ImprimirHistorial" disabled="@cargando">
                <i class="bi bi-printer me-1"></i> Imprimir Reporte
            </button>
            <a href="documentos" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5 no-print">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3 text-muted fw-bold">Generando reporte...</p>
        </div>
    }
    else if (noEncontrado || documento is null)
    {
        <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
            <div>No se encontró el expediente solicitado o su acceso está restringido.</div>
        </div>
    }
    else
    {
        @* CABECERA DEL REPORTE *@
        <div class="card mb-5 shadow-sm border-0 bg-white">
            <div class="card-body p-4 border-start border-primary border-5 rounded-start">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle">@documento.IdTipoNavigation?.Nombre</span>
                            <h3 class="h4 mb-0 fw-bold text-dark text-start">@documento.NumeroOficial</h3>
                        </div>
                        <h5 class="text-dark fw-semibold mb-3">@documento.Asunto</h5>

                        @if (!string.IsNullOrWhiteSpace(documento.Descripcion))
                        {
                            <div class="p-3 bg-light rounded-3 border-start border-3 border-secondary">
                                <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.65rem;">Descripción inicial:</small>
                                <div class="text-muted small italic">@documento.Descripcion</div>
                            </div>
                        }
                    </div>
                    <div class="col-md-4 text-md-end mt-3 mt-md-0 border-start border-light ps-4">
                        <div class="mb-3">
                            <label class="d-block small text-muted text-uppercase fw-bold">Ubicación Actual</label>
                            <div class="fw-bold text-dark">@documento.IdOficinaActualNavigation?.Nombre</div>
                        </div>
                        <div class="mb-3">
                            <label class="d-block small text-muted text-uppercase fw-bold">Estado Actual</label>
                            <span class="badge bg-dark px-3 py-2 fs-6">@documento.IdEstadoActualNavigation?.Nombre</span>
                        </div>
                        <div>
                            <label class="d-block small text-muted text-uppercase fw-bold">Fecha de Apertura</label>
                            <div class="fw-bold text-dark">@documento.FechaCreacion?.ToString("dd/MM/yyyy HH:mm") hs</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex align-items-center mb-4">
            <h5 class="mb-0 fw-bold text-secondary text-uppercase" style="letter-spacing: 1px;">Flujo de Movimientos</h5>
            <div class="flex-grow-1 ms-3 border-bottom"></div>
        </div>

        @if (!historial.Any())
        {
            <div class="text-center py-5 bg-light rounded-4 border border-dashed">
                <i class="bi bi-folder-x fs-1 text-muted"></i>
                <p class="mt-2 text-muted">No existen registros de movimientos para este documento.</p>
            </div>
        }
        else
        {
            <div class="timeline">
                @foreach (var mov in historial)
                {
                    var esPrincipal = mov.IdDocumento == documento.IdDocumento;
                    <div class="timeline-item @(esPrincipal ? "" : "linked-doc")">
                        <div class="card card-movimiento shadow-sm border">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between flex-wrap gap-2 mb-3">
                                    <div>
                                        @if (mov.IdDocumentoNavigation is not null)
                                        {
                                            <span class="badge px-3 py-2 @(esPrincipal ? "bg-primary-subtle text-primary border border-primary" : "bg-warning-subtle text-dark border border-warning")">
                                                <i class="bi @(esPrincipal ? "bi-file-earmark-text" : "bi-link-45deg") me-1"></i>
                                                @mov.IdDocumentoNavigation.IdTipoNavigation?.Nombre @mov.IdDocumentoNavigation.NumeroOficial
                                            </span>
                                        }
                                    </div>
                                    <div class="text-md-end">
                                        <div class="fw-bold text-dark">@mov.FechaMovimiento?.ToString("dd/MM/yyyy")</div>
                                        <div class="text-muted small">@mov.FechaMovimiento?.ToString("HH:mm") hs</div>
                                    </div>
                                </div>

                                <div class="office-path mb-3 shadow-sm border">
                                    <span class="fw-bold text-secondary">@mov.IdOficinaOrigenNavigation?.Nombre</span>
                                    <i class="bi bi-arrow-right text-primary fs-5"></i>
                                    <span class="fw-bold text-success fs-6">@mov.IdOficinaDestinoNavigation?.Nombre</span>
                                </div>

                                <div class="p-3 rounded-3 bg-white border">
                                    @if (!string.IsNullOrWhiteSpace(mov.ObservacionPase))
                                    {
                                        <p class="mb-0 text-dark" style="font-size: 0.95rem;">
                                            <i class="bi bi-chat-square-quote text-info me-2"></i>@mov.ObservacionPase
                                        </p>
                                    }
                                    else
                                    {
                                        <em class="text-muted small">Sin observaciones registradas.</em>
                                    }

                                    <div class="mt-3 pt-2 border-top border-light d-flex align-items-center text-muted" style="font-size: 0.8rem;">
                                        <i class="bi bi-person-check-fill me-2 text-primary"></i>
                                        <span>Responsable: <span class="fw-bold text-dark">@mov.IdUsuarioResponsableNavigation?.NombreCompleto</span></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    [Parameter] public long Id { get; set; }

    private MaeDocumento? documento;
    private List<TraMovimiento> historial = [];
    private bool cargando = true;
    private bool noEncontrado = false;

    protected override async Task OnParametersSetAsync()
    {
        cargando = true;
        noEncontrado = false;
        historial.Clear();

        try
        {
            var docs = await RepoDocs.GetFilteredAsync(
                d => d.IdDocumento == Id,
                "IdTipoNavigation,IdEstadoActualNavigation,IdOficinaActualNavigation"
            );

            documento = docs.FirstOrDefault();

            if (documento is null)
            {
                noEncontrado = true;
                return;
            }

            var familia = await RepoDocs.GetFilteredAsync(d => d.IdHiloConversacion == documento.IdHiloConversacion);
            var idsEnHilo = familia.Select(d => d.IdDocumento).ToList();

            var movimientos = await RepoMovimientos.GetFilteredAsync(
                m => idsEnHilo.Contains(m.IdDocumento),
                "IdOficinaOrigenNavigation,IdOficinaDestinoNavigation,IdUsuarioResponsableNavigation,IdDocumentoNavigation.IdTipoNavigation"
            );

            historial = movimientos
                .OrderByDescending(m => m.FechaMovimiento)
                .ThenByDescending(m => m.IdMovimiento)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando historial: {ex.Message}");
            noEncontrado = true;
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task ImprimirHistorial()
    {
        await JS.InvokeVoidAsync("window.print");
    }
}