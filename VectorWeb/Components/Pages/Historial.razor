@page "/documentos/historial/{Id:long}"
@using Microsoft.EntityFrameworkCore
@using VectorWeb.Models
@using VectorWeb.Repositories
@inject IRepository<MaeDocumento> RepoDocs
@inject IRepository<TraMovimiento> RepoMovimientos
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Historial del Documento</PageTitle>

<div class="container py-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="bi bi-clock-history"></i> Historial del Expediente</h3>
        <div class="d-flex gap-2 no-print">
            <button class="btn btn-outline-primary" @onclick="ImprimirHistorial" disabled="@cargando">
                <i class="bi bi-printer"></i> Imprimir
            </button>
            <a href="documentos" class="btn btn-outline-secondary">Volver a la lista</a>
        </div>
    </div>

    @if (cargando)
    {
        <div class="d-flex align-items-center gap-2 alert alert-info">
            <div class="spinner-border spinner-border-sm" role="status"></div>
            <span>Cargando historial completo...</span>
        </div>
    }
    else if (noEncontrado || documento is null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No se encontró el documento solicitado o no tienes permisos para verlo.
        </div>
    }
    else
    {
        <div class="card mb-4 shadow-sm border-start border-primary border-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="card-title text-primary mb-3">
                            @documento.IdTipoNavigation?.Nombre <span class="text-dark">@documento.NumeroOficial</span>
                        </h4>

                        <div class="mb-2">
                            <span class="badge bg-light text-dark border">Asunto</span>
                            <span class="fw-bold ms-1">@documento.Asunto</span>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(documento.Descripcion))
                        {
                            <div class="text-muted small mt-2 p-2 bg-light rounded">
                                <i class="bi bi-justify-left"></i> @documento.Descripcion
                            </div>
                        }
                    </div>
                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <div class="mb-2">
                            <span class="badge bg-secondary p-2" title="Estado actual del trámite">
                                @documento.IdEstadoActualNavigation?.Nombre
                            </span>
                        </div>
                        <div class="text-muted small">
                            Iniciado el @documento.FechaCreacion?.ToString("dd/MM/yyyy")
                        </div>
                        <div class="text-muted small">
                            a las @documento.FechaCreacion?.ToString("HH:mm") hs.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="mb-3 border-bottom pb-2">Línea de tiempo de movimientos</h5>

        @if (!historial.Any())
        {
            <div class="alert alert-light text-center text-muted">
                <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                No se encontraron movimientos registrados para este expediente.
            </div>
        }
        else
        {
            <div class="timeline">
                @foreach (var mov in historial)
                {
                    <div class="timeline-item card shadow-sm mb-4">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    @if (mov.IdDocumentoNavigation is not null)
                                    {
                                        var esPrincipal = mov.IdDocumento == documento.IdDocumento;
                                        // Si es otro documento del hilo, lo destacamos diferente
                                        <a href="documentos/historial/@mov.IdDocumento"
                                           class="badge text-decoration-none border px-2 py-1 @(esPrincipal ? "alert-primary text-primary" : "alert-warning text-dark")"
                                           style="font-size: 0.9em; opacity: 1 !important;"
                                           title="@(esPrincipal ? "Movimiento del documento actual" : "Movimiento de un documento vinculado/hijo")">
                                            <i class="bi @(esPrincipal ? "bi-file-earmark-text" : "bi-paperclip")"></i>
                                            @mov.IdDocumentoNavigation.IdTipoNavigation?.Nombre @mov.IdDocumentoNavigation.NumeroOficial
                                        </a>
                                    }
                                </div>
                                <div class="text-end ms-2">
                                    <span class="badge bg-light text-dark border">
                                        @mov.FechaMovimiento?.ToString("dd/MM/yyyy")
                                    </span>
                                    <small class="d-block text-muted mt-1">@mov.FechaMovimiento?.ToString("HH:mm")</small>
                                </div>
                            </div>

                            <div class="row align-items-center g-2 mb-3">
                                <div class="col-auto">
                                    <strong class="text-secondary">@mov.IdOficinaOrigenNavigation?.Nombre</strong>
                                </div>
                                <div class="col-auto text-muted">
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                                <div class="col">
                                    <strong class="text-success fs-5">@mov.IdOficinaDestinoNavigation?.Nombre</strong>
                                </div>
                            </div>

                            <div class="bg-light p-2 rounded border-start border-3 @(string.IsNullOrWhiteSpace(mov.ObservacionPase) ? "border-secondary" : "border-info")">
                                @if (!string.IsNullOrWhiteSpace(mov.ObservacionPase))
                                {
                                    <div class="mb-2 text-dark">
                                        <i class="bi bi-chat-left-text me-1 text-muted"></i> @mov.ObservacionPase
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted small fst-italic">Sin observaciones</div>
                                }

                                <div class="d-flex align-items-center text-muted small mt-2 pt-2 border-top border-light">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span>Operador: <strong>@mov.IdUsuarioResponsableNavigation?.NombreCompleto</strong></span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<style>
    /* Estilos de Línea de Tiempo Vertical */
    .timeline {
        position: relative;
        padding-left: 2rem;
        margin-left: 0.5rem;
        border-left: 2px solid #e9ecef;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .timeline-item::before {
            content: "";
            position: absolute;
            left: -2.6rem; /* Ajustado para alinearse con el borde */
            top: 1.5rem;
            width: 1.2rem;
            height: 1.2rem;
            border-radius: 50%;
            background-color: #fff;
            border: 3px solid #0d6efd;
            z-index: 1;
        }

    /* Estilos de Impresión */
    @@media print {
        .no-print {
            display: none !important;
        }

        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
        }

        .timeline {
            border-left-color: #999;
        }

        .timeline-item {
            break-inside: avoid;
            page-break-inside: avoid;
        }

            .timeline-item::before {
                border-color: #666;
                background-color: #ccc;
            }

        .badge {
            border: 1px solid #000;
            color: #000 !important;
            background: none !important;
        }

        .bg-light {
            background-color: white !important;
        }
    }
</style>

@code {
    [Parameter] public long Id { get; set; } // CORREGIDO: int -> long

    private MaeDocumento? documento;
    private List<TraMovimiento> historial = [];
    private bool cargando = true;
    private bool noEncontrado = false;

    // Usamos OnParametersSetAsync para recargar si el Id cambia en la misma página
    protected override async Task OnParametersSetAsync()
    {
        cargando = true;
        noEncontrado = false;
        historial.Clear();

        try
        {
            // 1. Obtener el documento base para saber su Hilo de Conversación
            documento = await RepoDocs
                .GetQueryable("IdTipoNavigation,IdEstadoActualNavigation")
                .FirstOrDefaultAsync(d => d.IdDocumento == Id);

            if (documento is null)
            {
                noEncontrado = true;
                return;
            }

            // 2. Obtener todos los documentos relacionados en el hilo (Optimizado)
            // Traemos solo los IDs para filtrar los movimientos
            var idsEnHilo = await RepoDocs.GetQueryable()
                .Where(d => d.IdHiloConversacion == documento.IdHiloConversacion)
                .Select(d => d.IdDocumento)
                .ToListAsync();

            // 3. Obtener movimientos de TODO el hilo de conversación
            historial = await RepoMovimientos
                .GetQueryable("IdOficinaOrigenNavigation,IdOficinaDestinoNavigation,IdUsuarioResponsableNavigation,IdDocumentoNavigation.IdTipoNavigation")
                .Where(m => idsEnHilo.Contains(m.IdDocumento))
                .OrderByDescending(m => m.FechaMovimiento) // Orden descendente suele ser mejor para historial (más nuevo arriba)
                .ThenByDescending(m => m.IdMovimiento)
                .ToListAsync();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task ImprimirHistorial()
    {
        await JS.InvokeVoidAsync("window.print");
    }
}