    private async Task EliminarRango(MaeNumeracionRango rango)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar el rango '{rango.NombreRango}'? Esta acción es irreversible.");
        if (!confirmado) return;
        procesando = true;
        LimpiarMensajes();
        try
        {
            var resultado = await RangoService.EliminarRangoAsync(rango.IdRango);
            if (!resultado.Exitoso) { mensajeError = resultado.Mensaje; return; }
            mensajeOk = "Rango eliminado correctamente.";
            await CargarTodo();
        }
        finally { procesando = false; }
    }

