    private Task FiltrarOficinasRango(ChangeEventArgs e)
    {
        oficinaBusquedaRango = e.Value?.ToString() ?? string.Empty;
        rangoActual.IdOficina = null;
        globalSeleccionadoRango = false;
        indiceOficinaRangoSeleccionada = -1;

        if (string.IsNullOrWhiteSpace(oficinaBusquedaRango))
        {
            oficinasRangoFiltradas.Clear();
            return Task.CompletedTask;
        }
        oficinasRangoFiltradas = BuscarOficinasRango(oficinaBusquedaRango).Take(8).ToList();
        var coincidenciaExacta = oficinas.FirstOrDefault(oficina => string.Equals(oficina.Nombre, oficinaBusquedaRango, StringComparison.OrdinalIgnoreCase));
        if (coincidenciaExacta != null) rangoActual.IdOficina = coincidenciaExacta.IdOficina;
        return Task.CompletedTask;
    }

    private Task SeleccionarOficinaRango(CatOficina oficina)
    {
        rangoActual.IdOficina = oficina.IdOficina;
        globalSeleccionadoRango = false;
        oficinaBusquedaRango = oficina.Nombre ?? string.Empty;
        oficinasRangoFiltradas.Clear();
        indiceOficinaRangoSeleccionada = -1;
        return Task.CompletedTask;
    }

