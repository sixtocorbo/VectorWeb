@page "/configuracion/rangos"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "configuracion.rangos")]
@using VectorWeb.Models
@using VectorWeb.Repositories
@using VectorWeb.Services
@using System.Text.RegularExpressions
@using System.Globalization
@using System.Timers
@using Microsoft.AspNetCore.Components
@inject NumeracionRangoService RangoService
@inject IRepository<CatTipoDocumento> RepoTipos
@inject IRepository<CatOficina> RepoOficinas
@inject IJSRuntime JS
@implements IDisposable
@rendermode InteractiveServer

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-sliders"></i> Gestión de Rangos y Cupos</h3>
    @if (!string.IsNullOrWhiteSpace(VolverUrlDecodificada))
    {
        <a href="@VolverUrlDecodificada" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Regresar
        </a>
    }
</div>

@* --- MENSAJES DE ALERTA (Sin Toast, integrados) --- *@
<AlertaScroll Id="alertaPrincipalError"
              Mensaje="@mensajeError"
              Tipo="danger"
              CssClass="alert-dismissible fade show"
              IconoCss="bi bi-exclamation-triangle-fill"
              PermitirCerrar="true"
              OnCerrar="LimpiarMensajeError" />

<AlertaScroll Id="alertaPrincipalOk"
              Mensaje="@mensajeOk"
              Tipo="success"
              CssClass="alert-dismissible fade show"
              IconoCss="bi bi-check-circle-fill"
              PermitirCerrar="true"
              OnCerrar="LimpiarMensajeOk" />

@* --- SISTEMA DE PESTAÑAS --- *@
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <button class="nav-link @(tabActiva == TabConfig.Rangos ? "active fw-bold border-primary border-bottom-0" : "")"
                @onclick="() => CambiarTab(TabConfig.Rangos)">
            <i class="bi bi-list-ol me-2"></i>Rangos
            <span class="badge bg-secondary rounded-pill ms-2">@listaRangos.Count</span>
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(tabActiva == TabConfig.Cupos ? "active fw-bold border-success border-bottom-0 text-success" : "text-success")"
                @onclick="() => CambiarTab(TabConfig.Cupos)">
            <i class="bi bi-pie-chart me-2"></i>Cupos
            <span class="badge bg-success bg-opacity-75 rounded-pill ms-2">@libroMayorCupos.Count</span>
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(tabActiva == TabConfig.Bitacora ? "active fw-bold border-warning border-bottom-0 text-dark" : "text-muted")"
                @onclick="() => CambiarTab(TabConfig.Bitacora)">
            <i class="bi bi-clock-history me-2"></i>Bitácora
        </button>
    </li>
</ul>

@* --- CONTENIDO DE LAS PESTAÑAS --- *@

@if (procesando && cargandoInicial)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="text-muted mt-2">Cargando configuración...</p>
    </div>
}
else
{
    /* =================================================================================
       PESTAÑA 1: RANGOS DE NUMERACIÓN
       ================================================================================= */
    @if (tabActiva == TabConfig.Rangos)
    {
        <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
            <div class="card-body">
                <div class="row g-2 align-items-center mb-4">
                    <div class="col-md-4">
                        <button class="btn btn-primary w-100" @onclick="AbrirNuevoRango" disabled="@procesando">
                            <i class="bi bi-plus-lg me-2"></i> Nuevo Rango
                        </button>
                    </div>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control border-start-0 ps-0"
                                   placeholder="Buscar por tipo, oficina, año o nombre de serie..."
                                   @bind="filtroTexto" @bind:event="oninput" />
                            @if (!string.IsNullOrEmpty(filtroTexto))
                            {
                                <button class="btn btn-outline-secondary" @onclick="() => filtroTexto = string.Empty" title="Limpiar filtro">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo</th>
                                <th>Oficina</th>
                                <th class="text-center">Año</th>
                                <th>Serie (Nombre)</th>
                                <th class="text-end">Rango</th>
                                <th class="text-end">Último Uso</th>
                                <th class="text-center">Estado</th>
                                <th class="text-end" style="min-width: 200px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!RangosFiltrados.Any())
                            {
                                <tr><td colspan="8" class="text-center py-5 text-muted">No se encontraron rangos que coincidan.</td></tr>
                            }
                            else
                            {
                                @foreach (var rango in RangosFiltrados)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold text-primary">@(rango.IdTipoNavigation?.Nombre ?? $"Tipo {rango.IdTipo}")</span>
                                        </td>
                                        <td>
                                            @if (rango.IdOficinaNavigation != null)
                                            {
                                                <span class="badge bg-info text-dark"><i class="bi bi-building me-1"></i>@rango.IdOficinaNavigation.Nombre</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary"><i class="bi bi-exclamation-circle me-1"></i>Sin oficina</span>
                                            }
                                        </td>
                                        <td class="text-center">@rango.Anio</td>
                                        <td><code>@rango.NombreRango</code></td>
                                        <td class="text-end">
                                            <span class="badge bg-light text-dark border">@rango.NumeroInicio</span>
                                            <i class="bi bi-arrow-right-short text-muted"></i>
                                            <span class="badge bg-light text-dark border">@rango.NumeroFin</span>
                                        </td>
                                        <td class="text-end fw-bold">@rango.UltimoUtilizado</td>
                                        <td class="text-center">
                                            @if (rango.Activo)
                                            {
                                                <span class="badge bg-success text-white">
                                                    <i class="bi bi-check-circle-fill me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary text-white">
                                                    <i class="bi bi-dash-circle me-1"></i>Inactivo
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => Editar(rango)" title="Editar">
                                                <i class="bi bi-pencil me-1"></i>Editar
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarRango(rango)" title="Eliminar">
                                                <i class="bi bi-trash me-1"></i>Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    /* =================================================================================
       PESTAÑA 2: CUPOS (LIBRO MAYOR) - MEJORADA
       ================================================================================= */
    @if (tabActiva == TabConfig.Cupos)
    {
        <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0 text-success">Libro Mayor de Cupos</h5>
                    <div>
                        <button class="btn btn-outline-secondary me-2" @onclick="CargarLibroMayorCuposAsync" title="Recargar">
                            <i class="bi bi-arrow-clockwise me-1"></i>Recargar
                        </button>
                        <button class="btn btn-success" @onclick="AbrirNuevoCupo">
                            <i class="bi bi-plus-circle me-2"></i> Asignar Nuevo Cupo
                        </button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo de Documento</th>
                                <th class="text-center">Año</th>
                                <th class="text-end">Cupo Total</th>
                                <th class="text-end">Consumido</th>
                                <th class="text-end" style="width: 30%;">Disponibilidad</th>
                                <th class="text-end" style="min-width: 180px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (libroMayorCupos.Count == 0)
                            {
                                <tr><td colspan="6" class="text-center py-4 text-muted">No hay cupos asignados aún.</td></tr>
                            }
                            else
                            {
                                @foreach (var item in libroMayorCupos)
                                {
                                    var porcentaje = item.Cantidad > 0 ? (double)item.Consumido / item.Cantidad * 100 : 0;
                                    // MEJORA: Lógica de semáforo más estricta
                                    var claseBarra = porcentaje > 95 ? "bg-danger animate__animated animate__pulse animate__infinite"
                                    : (porcentaje > 80 ? "bg-warning"
                                    : "bg-success");
                                    var claseTexto = porcentaje > 95 ? "text-danger fw-bold"
                                    : (porcentaje > 80 ? "text-warning fw-bold"
                                    : "text-muted");
                                    <tr>
                                        <td class="fw-bold text-dark">@item.Tipo</td>
                                        <td class="text-center">@item.Anio</td>
                                        <td class="text-end fw-bold">@item.Cantidad</td>
                                        <td class="text-end">@item.Consumido</td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <div class="progress" style="height: 10px;">
                                                    <div class="progress-bar @claseBarra" role="progressbar" style="width: @porcentaje%"></div>
                                                </div>
                                                <div class="d-flex justify-content-between mt-1 small">
                                                    <span>@porcentaje.ToString("F1")% usado</span>
                                                    <span class="@claseTexto">@item.Disponible disp.</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <button type="button" class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditarCupo(item)">
                                                <i class="bi bi-pencil-square me-1"></i>Editar
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => EliminarCupo(item)">
                                                <i class="bi bi-trash me-1"></i>Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    /* =================================================================================
       PESTAÑA 3: BITÁCORA
       ================================================================================= */
    @if (tabActiva == TabConfig.Bitacora)
    {
        <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Historial de Eventos</h5>
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="RecargarBitacora">
                        <i class="bi bi-arrow-clockwise me-1"></i> Actualizar
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-sm table-striped table-hover mb-0" style="font-size: 0.9rem;">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Acción</th>
                                <th>Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (bitacora.Count == 0)
                            {
                                <tr><td colspan="3" class="text-center py-3 text-muted">Sin eventos registrados.</td></tr>
                            }
                            else
                            {
                                @foreach (var evento in bitacora)
                                {
                                    <tr>
                                        <td class="text-nowrap" style="width: 150px;">@evento.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td style="width: 120px;">
                                            <span class="badge w-100 @ObtenerColorAccion(evento.Accion)">@evento.Accion</span>
                                        </td>
                                        <td>@evento.Detalle</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}

@* --- MODAL RANGO (EDICIÓN/NUEVO) --- *@
@if (mostrarModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@(rangoActual.IdRango == 0 ? "Nuevo Rango" : "Editar Rango")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrWhiteSpace(mensajeErrorModalRango))
                    {
                        <AlertaScroll Id="alertaModalRango" Mensaje="@mensajeErrorModalRango" Tipo="danger" />
                    }

                    <EditForm Model="rangoActual" OnSubmit="IgnorarSubmitRango">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="alert alert-info border mb-0">
                                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
                                        <h6 class="mb-0 fw-bold"><i class="bi bi-lightbulb me-1"></i>Sugerencia de asignación</h6>
                                        <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AplicarSugerenciaRango" disabled="@(!PuedeAplicarSugerencia)">
                                            <i class="bi bi-magic me-1"></i>Aplicar sugerencia
                                        </button>
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(mensajeErrorSugerenciaRango))
                                    {
                                        <div class="text-danger small mb-2">@mensajeErrorSugerenciaRango</div>
                                    }

                                    @if (rangoActual.IdTipo <= 0 || rangoActual.Anio <= 0)
                                    {
                                        <div class="small text-muted">
                                            Seleccione primero el tipo de documento y año para calcular una sugerencia automática.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="row g-2 small">
                                            <div class="col-md-3"><span class="text-muted">Cupo total:</span> <strong>@sugerenciaRango.CupoTotal.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-3"><span class="text-muted">Asignado:</span> <strong>@sugerenciaRango.ConsumoTotalAsignado.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-3 text-success"><span class="text-muted">Disponible:</span> <strong>@sugerenciaRango.SaldoDisponible.ToString("N0", CulturaUi)</strong></div>
                                        </div>

                                        <hr class="my-2" />

                                        <div class="row g-2 small">
                                            <div class="col-md-4"><span class="text-muted">Inicio sugerido:</span> <strong>@sugerenciaRango.NumeroInicioSugerido.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-4"><span class="text-muted">Fin sugerido:</span> <strong>@sugerenciaRango.NumeroFinSugerido.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-4"><span class="text-muted">Cantidad:</span> <strong>@sugerenciaRango.CantidadSugerida.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-12"><span class="text-muted">Máximo consecutivo libre:</span> <strong>@sugerenciaRango.MaximoConsecutivoDisponible.ToString("N0", CulturaUi)</strong></div>
                                        </div>
                                        @* Avisos varios de lógica de negocio *@
                                        @if (MostrarAvisoExisteRangoActivo)
                                        {
                                            <div class="small text-primary mt-2"><i class="bi bi-info-circle me-1"></i>Oficina ya tiene @sugerenciaRango.CantidadRangosActivosOficina rango(s) activo(s).</div>
                                        }
                                        @if (sugerenciaRango.CantidadRangosActivosOficina >= 2)
                                        {
                                            <div class="small text-danger mt-2"><i class="bi bi-exclamation-octagon me-1"></i>La oficina alcanzó el máximo de 2 rangos activos para este tipo/año.</div>
                                        }
                                        @if (sugerenciaRango.SugerenciaRecortadaPorSaldo)
                                        {
                                            <div class="small text-warning mt-2"><i class="bi bi-exclamation-triangle me-1"></i>Ajustado por saldo disponible.</div>
                                        }
                                    }

                                    @if (MostrarAccionesSugeridas)
                                    {
                                        <div class="d-flex flex-wrap gap-2 mt-3">
                                            @if (DebeSugerirCrearCupo)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-success" @onclick="CrearCupoDesdeSugerencia">
                                                    <i class="bi bi-plus-circle me-1"></i>Crear cupo para este tipo/año
                                                </button>
                                            }
                                            @if (DebeSugerirCrearRango)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-primary" @onclick="PrepararNuevoRangoDesdeSugerencia">
                                                    <i class="bi bi-arrow-repeat me-1"></i>Crear nuevo rango con estos parámetros
                                                </button>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tipo de Documento</label>
                                <InputSelect @bind-Value="rangoActual.IdTipo" @bind-Value:after="OnParametrosSugerenciaRangoCambio" class="form-select" disabled="@BloquearTipoEnModalRango">
                                    <option value="0">-- Seleccione --</option>
                                    @foreach (var tipo in tipos)
                                    {
                                        <option value="@tipo.IdTipo">@tipo.Nombre</option>
                                    }
                                </InputSelect>
                            </div>

                            @* --- BUSCADOR DE OFICINA CON DEBOUNCE --- *@
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Oficina</label>
                                <div class="position-relative">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                                        <input type="text"
                                               class="form-control"
                                               placeholder="Escriba para buscar oficina..."
                                               value="@oficinaBusquedaRango"
                                               @oninput="OnBusquedaOficinaInput"
                                               @onfocus="MostrarSugerenciasOficinaRango"
                                               @onkeydown="ManejarTecladoOficinasRango"
                                               disabled="@BloquearOficinaEnModalRango" />
                                        @* MEJORA: Usamos oninput para el debounce *@
                                    </div>

                                    @if (oficinasRangoFiltradas.Any())
                                    {
                                        <div class="list-group position-absolute w-100 shadow-sm" style="max-height: 220px; overflow-y: auto; z-index: 1080;">
                                            @for (var i = 0; i < oficinasRangoFiltradas.Count; i++)
                                            {
                                                var oficina = oficinasRangoFiltradas[i];
                                                var claseActivo = i == indiceOficinaRangoSeleccionada ? "active" : string.Empty;
                                                <button type="button" class="list-group-item list-group-item-action @claseActivo" @onclick="() => SeleccionarOficinaRango(oficina)">
                                                    @oficina.Nombre
                                                </button>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="form-text text-muted">@MensajeOficinaRango</div>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-bold">Año</label>
                                <InputNumber @bind-Value="rangoActual.Anio" @bind-Value:after="OnParametrosSugerenciaRangoCambio" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Desde</label>
                                <InputNumber @bind-Value="rangoActual.NumeroInicio" @bind-Value:after="OnNumeroInicioChanged" class="form-control" />
                                @if (!string.IsNullOrWhiteSpace(MensajeSolapamientoEnTiempoReal))
                                {
                                    <div class="text-danger small mt-1">@MensajeSolapamientoEnTiempoReal</div>
                                }
                            </div>
                            <div class="col-md-8">
                                <label class="form-label fw-bold d-flex justify-content-between align-items-center">
                                    <span>Cantidad a Asignar</span>
                                    @if (rangoActual.IdTipo > 0 && rangoActual.Anio > 0)
                                    {
                                        <span class="badge bg-light text-dark border">Máx. sugerido: @CantidadMaximaSugerida.ToString("N0", CulturaUi)</span>
                                    }
                                </label>
                                <div class="row g-2 align-items-center">
                                    <div class="col-md-4">
                                        <input type="number"
                                               class="form-control"
                                               min="0"
                                               max="@CantidadMaximaSugerida"
                                               step="1"
                                               value="@cantidadSugeridaSolicitada"
                                               @oninput="OnCantidadSugeridaInput" />
                                    </div>
                                    <div class="col-md-8">
                                        <input type="range"
                                               class="form-range"
                                               min="0"
                                               max="@CantidadMaximaSugerida"
                                               step="1"
                                               value="@CantidadSolicitadaSegura"
                                               @oninput="OnCantidadSugeridaInput" />
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap gap-2 mt-2">
                                    @foreach (var cantidadRapida in CantidadesRapidasSugeridas)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="() => AplicarCantidadRapida(cantidadRapida)">+@cantidadRapida</button>
                                    }
                                    <button type="button" class="btn btn-sm btn-outline-primary" @onclick="UsarCantidadMaximaDisponible">Usar máximo disponible</button>
                                </div>
                                <div class="form-text">El sistema calcula automáticamente el Hasta y limita la cantidad al saldo disponible.</div>
                                @if (!string.IsNullOrWhiteSpace(MensajeSolapamientoEnTiempoReal))
                                {
                                    <div class="text-danger small mt-1">@MensajeSolapamientoEnTiempoReal</div>
                                }
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Último Utilizado</label>
                                <InputNumber @bind-Value="rangoActual.UltimoUtilizado" class="form-control" />
                            </div>
                            <div class="col-12">
                                <div class="alert alert-light border mb-0 small">
                                    <i class="bi bi-gear-wide-connected me-1"></i>
                                    Se asignarán <strong>@CantidadSolicitadaSegura.ToString("N0", CulturaUi)</strong> números desde
                                    <strong>@rangoActual.NumeroInicio.ToString("N0", CulturaUi)</strong> hasta
                                    <strong>@rangoActual.NumeroFin.ToString("N0", CulturaUi)</strong>.
                                </div>
                            </div>

                        </div>

                        <div class="mt-4 form-check form-switch">
                            <InputCheckbox @bind-Value="rangoActual.Activo" class="form-check-input" id="checkActivo" />
                            <label class="form-check-label" for="checkActivo">Rango Activo para consumo</label>
                        </div>

                        <div class="modal-footer px-0 pb-0 mt-3">
                            <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                            <button type="button" class="btn btn-primary" @onclick="Guardar" disabled="@procesando">
                                @if (procesando)
                                {
