    private bool MostrarAvisoRangoAgotado => sugerenciaRango.OficinaTieneRangoActivo && sugerenciaRango.RangoActivoAgotado;

    private async Task RefrescarSugerenciaRangoAsync()
    {
        mensajeErrorSugerenciaRango = string.Empty;

        if (rangoActual.IdTipo <= 0 || rangoActual.Anio <= 0)
        {
            sugerenciaRango = new SugerenciaRangoNumeracion();
            return;
        }

        sugerenciaRango = await RangoService.ObtenerSugerenciaRangoAsync(
            rangoActual.IdTipo,
            rangoActual.Anio,
            rangoActual.IdOficina,
            rangoActual.IdRango == 0 ? null : rangoActual.IdRango,
            cantidadSugeridaSolicitada);

        if (sugerenciaRango.CupoTotal == 0)
        {
            mensajeErrorSugerenciaRango = "No existe cupo configurado para este tipo y año. Configure el cupo para habilitar una sugerencia confiable.";
        }
    }

    private async Task AplicarSugerenciaRango()
    {
        await RefrescarSugerenciaRangoAsync();
        if (!PuedeAplicarSugerencia)
        {
            return;
        }

        rangoActual.NumeroInicio = sugerenciaRango.NumeroInicioSugerido;
        rangoActual.NumeroFin = sugerenciaRango.NumeroFinSugerido;

        if (rangoActual.UltimoUtilizado < rangoActual.NumeroInicio - 1 || rangoActual.UltimoUtilizado > rangoActual.NumeroFin)
        {
            rangoActual.UltimoUtilizado = rangoActual.NumeroInicio - 1;
        }
    }
