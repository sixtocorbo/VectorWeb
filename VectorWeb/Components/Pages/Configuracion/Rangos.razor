                if (AnioPreseleccionado.HasValue && AnioPreseleccionado.Value >= 2000)
                {
                    rangoActual.Anio = AnioPreseleccionado.Value;
                }

                tabActiva = TabConfig.Rangos;
            }

            await RefrescarSugerenciaRangoAsync();
        }
        catch (Exception ex)
        {
            // Captura errores inesperados de comunicación o renderizado
            MostrarErrorModalCupo("Error inesperado: " + ex.Message);
        }
        finally { procesando = false; }
    }

    private async Task OnCupoParametrosCambio()
    {
        if (cupoTipoSeleccionado > 0)
        {
            var tipoSeleccionado = cupoTipoSeleccionado;
            var anioSeleccionado = cupoAnio;
            procesando = true;
            StateHasChanged(); // <-- Forzamos a mostrar el spinner

            try
            {
                var cantidad = await RangoService.ObtenerCantidadCupoAsync(tipoSeleccionado, anioSeleccionado) ?? 0;
                var consumido = await RangoService.ObtenerConsumoAcumuladoAsync(tipoSeleccionado, anioSeleccionado);

                if (tipoSeleccionado != cupoTipoSeleccionado || anioSeleccionado != cupoAnio)
                {
                    return;
                }

                cupoCantidad = cantidad;
                cupoConsumido = consumido;
            }
            catch (Exception ex)
            {
                MostrarErrorModalCupo($"Error al cargar datos: {ex.Message}");
            }
            finally
            {
                if (tipoSeleccionado == cupoTipoSeleccionado && anioSeleccionado == cupoAnio)
                {
                    procesando = false;
                    StateHasChanged(); // <-- AVISAMOS A LA PANTALLA QUE YA TERMINÓ
                }
            }
        }
        else
        {
            cupoConsumido = 0;
            cupoCantidad = 0;
            procesando = false;
            StateHasChanged(); // <-- AVISAMOS A LA PANTALLA
        }
    }

