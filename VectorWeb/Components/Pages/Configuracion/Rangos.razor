    private string MensajeSolapamientoEnTiempoReal
    {
        get
        {
            if (rangoActual.IdTipo <= 0 || rangoActual.Anio <= 0 || rangoActual.NumeroInicio <= 0 || rangoActual.NumeroFin <= 0)
                return string.Empty;

            var haySolapamiento = listaRangos.Any(r =>
                r.IdTipo == rangoActual.IdTipo &&
                r.Anio == rangoActual.Anio &&
                r.IdRango != rangoActual.IdRango &&
                rangoActual.NumeroInicio <= r.NumeroFin &&
                rangoActual.NumeroFin >= r.NumeroInicio);

            return haySolapamiento
                ? "El rango se superpone con otro rango ya asignado para este tipo y año."
                : string.Empty;
        }
    }
