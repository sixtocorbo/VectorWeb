@page "/configuracion/rangos"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "configuracion.rangos")]
@using VectorWeb.Models
@using VectorWeb.Repositories
@using VectorWeb.Services
@using System.Text.RegularExpressions
@using System.Globalization
@inject NumeracionRangoService RangoService
@inject IRepository<CatTipoDocumento> RepoTipos
@inject IRepository<CatOficina> RepoOficinas
@inject IJSRuntime JS
@rendermode InteractiveServer

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-sliders"></i> Gestión de Rangos y Cupos</h3>
</div>

@* --- MENSAJES GLOBALES --- *@
@if (!string.IsNullOrWhiteSpace(mensajeError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@mensajeError
        <button type="button" class="btn-close" @onclick="() => mensajeError = string.Empty"></button>
    </div>
}

@if (!string.IsNullOrWhiteSpace(mensajeOk))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@mensajeOk
        <button type="button" class="btn-close" @onclick="() => mensajeOk = string.Empty"></button>
    </div>
}

@* --- SISTEMA DE PESTAÑAS --- *@
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <button class="nav-link @(tabActiva == TabConfig.Rangos ? "active fw-bold border-primary border-bottom-0" : "")"
                @onclick="() => CambiarTab(TabConfig.Rangos)">
            <i class="bi bi-list-ol me-2"></i>Rangos
            <span class="badge bg-secondary rounded-pill ms-2">@listaRangos.Count</span>
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(tabActiva == TabConfig.Cupos ? "active fw-bold border-success border-bottom-0 text-success" : "text-success")"
                @onclick="() => CambiarTab(TabConfig.Cupos)">
            <i class="bi bi-pie-chart me-2"></i>Cupos
            <span class="badge bg-success bg-opacity-75 rounded-pill ms-2">@libroMayorCupos.Count</span>
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(tabActiva == TabConfig.Bitacora ? "active fw-bold border-warning border-bottom-0 text-dark" : "text-muted")"
                @onclick="() => CambiarTab(TabConfig.Bitacora)">
            <i class="bi bi-clock-history me-2"></i>Bitácora
        </button>
    </li>
</ul>

@* --- CONTENIDO DE LAS PESTAÑAS --- *@

@if (procesando && cargandoInicial)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="text-muted mt-2">Cargando configuración...</p>
    </div>
}
else
{
    /* =================================================================================
       PESTAÑA 1: RANGOS DE NUMERACIÓN
       ================================================================================= */
    @if (tabActiva == TabConfig.Rangos)
    {
        <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
            <div class="card-body">
                <div class="row g-2 align-items-center mb-4">
                    <div class="col-md-4">
                        <button class="btn btn-primary w-100" @onclick="AbrirNuevoRango" disabled="@procesando">
                            <i class="bi bi-plus-lg me-2"></i> Nuevo Rango
                        </button>
                    </div>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control border-start-0 ps-0"
                                   placeholder="Buscar por tipo, oficina, año o nombre de serie..."
                                   @bind="filtroTexto" @bind:event="oninput" />
                            @if (!string.IsNullOrEmpty(filtroTexto))
                            {
                                <button class="btn btn-outline-secondary" @onclick="() => filtroTexto = string.Empty" title="Limpiar filtro">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo</th>
                                <th>Oficina</th>
                                <th class="text-center">Año</th>
                                <th>Serie (Nombre)</th>
                                <th class="text-end">Rango</th>
                                <th class="text-end">Último Uso</th>
                                <th class="text-center">Estado</th>
                                <th class="text-end" style="min-width: 200px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!RangosFiltrados.Any())
                            {
                                <tr><td colspan="8" class="text-center py-5 text-muted">No se encontraron rangos que coincidan.</td></tr>
                            }
                            else
                            {
                                @foreach (var rango in RangosFiltrados)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold text-primary">@(rango.IdTipoNavigation?.Nombre ?? $"Tipo {rango.IdTipo}")</span>
                                        </td>
                                        <td>
                                            @if (rango.IdOficinaNavigation != null)
                                            {
                                                <span class="badge bg-info text-dark"><i class="bi bi-building me-1"></i>@rango.IdOficinaNavigation.Nombre</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary"><i class="bi bi-exclamation-circle me-1"></i>Sin oficina</span>
                                            }
                                        </td>
                                        <td class="text-center">@rango.Anio</td>
                                        <td><code>@rango.NombreRango</code></td>
                                        <td class="text-end">
                                            <span class="badge bg-light text-dark border">@rango.NumeroInicio</span>
                                            <i class="bi bi-arrow-right-short text-muted"></i>
                                            <span class="badge bg-light text-dark border">@rango.NumeroFin</span>
                                        </td>
                                        <td class="text-end fw-bold">@rango.UltimoUtilizado</td>
                                        <td class="text-center">
                                            @if (rango.Activo)
                                            {
                                                <span class="badge bg-success-subtle text-success-emphasis border border-success-subtle">
                                                    <i class="bi bi-check-circle-fill me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary-subtle text-secondary-emphasis border border-secondary-subtle">
                                                    <i class="bi bi-dash-circle me-1"></i>Inactivo
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => Editar(rango)" title="Editar">
                                                <i class="bi bi-pencil me-1"></i>Editar
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarRango(rango)" title="Eliminar">
                                                <i class="bi bi-trash me-1"></i>Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    /* =================================================================================
       PESTAÑA 2: CUPOS (LIBRO MAYOR)
       ================================================================================= */
    @if (tabActiva == TabConfig.Cupos)
    {
        <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0 text-success">Libro Mayor de Cupos</h5>
                    <div>
                        <button class="btn btn-outline-secondary me-2" @onclick="CargarLibroMayorCuposAsync" title="Recargar">
                            <i class="bi bi-arrow-clockwise me-1"></i>Recargar
                        </button>
                        <button class="btn btn-success" @onclick="AbrirNuevoCupo">
                            <i class="bi bi-plus-circle me-2"></i> Asignar Nuevo Cupo
                        </button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo de Documento</th>
                                <th class="text-center">Año</th>
                                <th class="text-end">Cupo Total</th>
                                <th class="text-end">Consumido</th>
                                <th class="text-end" style="width: 25%;">Disponibilidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (libroMayorCupos.Count == 0)
                            {
                                <tr><td colspan="5" class="text-center py-4 text-muted">No hay cupos asignados aún.</td></tr>
                            }
                            else
                            {
                                @foreach (var item in libroMayorCupos)
                                {
                                    var porcentaje = item.Cantidad > 0 ? (double)item.Consumido / item.Cantidad * 100 : 0;
                                    var colorBarra = porcentaje > 90 ? "bg-danger" : (porcentaje > 75 ? "bg-warning" : "bg-success");

                                    <tr>
                                        <td class="fw-bold text-dark">@item.Tipo</td>
                                        <td class="text-center">@item.Anio</td>
                                        <td class="text-end fw-bold">@item.Cantidad</td>
                                        <td class="text-end">@item.Consumido</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-grow-1 me-2">
                                                    <div class="progress" style="height: 8px;">
                                                        <div class="progress-bar @colorBarra" role="progressbar" style="width: @porcentaje%"></div>
                                                    </div>
                                                </div>
                                                <span class="small fw-bold text-muted">@item.Disponible disp.</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    /* =================================================================================
       PESTAÑA 3: BITÁCORA (AUDITORÍA)
       ================================================================================= */
    @if (tabActiva == TabConfig.Bitacora)
    {
        <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Historial de Eventos</h5>
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="RecargarBitacora">
                        <i class="bi bi-arrow-clockwise me-1"></i> Actualizar
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-sm table-striped table-hover mb-0" style="font-size: 0.9rem;">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Acción</th>
                                <th>Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (bitacora.Count == 0)
                            {
                                <tr><td colspan="3" class="text-center py-3 text-muted">Sin eventos registrados.</td></tr>
                            }
                            else
                            {
                                @foreach (var evento in bitacora)
                                {
                                    <tr>
                                        <td class="text-nowrap" style="width: 150px;">@evento.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td style="width: 120px;">
                                            <span class="badge w-100 @ObtenerColorAccion(evento.Accion)">@evento.Accion</span>
                                        </td>
                                        <td>@evento.Detalle</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}

@* --- MODAL RANGO --- *@
@if (mostrarModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">@(rangoActual.IdRango == 0 ? "Nuevo Rango" : "Editar Rango")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrWhiteSpace(mensajeErrorModalRango))
                    {
                        <div class="alert alert-danger" role="alert">@mensajeErrorModalRango</div>
                    }

                    <EditForm Model="rangoActual" OnSubmit="IgnorarSubmitRango">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tipo de Documento</label>
                                <InputSelect @bind-Value="rangoActual.IdTipo" class="form-select" @onchange="OnParametrosSugerenciaRangoCambio">
                                    <option value="0">-- Seleccione --</option>
                                    @foreach (var tipo in tipos)
                                    {
                                        <option value="@tipo.IdTipo">@tipo.Nombre</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Oficina</label>
                                <div class="position-relative">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                                        <input type="text"
                                               class="form-control"
                                               placeholder="Escriba para buscar oficina..."
                                               value="@oficinaBusquedaRango"
                                               @oninput="FiltrarOficinasRango"
                                               @onfocus="MostrarSugerenciasOficinaRango"
                                               @onkeydown="ManejarTecladoOficinasRango" />
                                    </div>

                                    @if (oficinasRangoFiltradas.Any())
                                    {
                                        <div class="list-group position-absolute w-100 shadow-sm z-3" style="max-height: 220px; overflow-y: auto;">
                                            @for (var i = 0; i < oficinasRangoFiltradas.Count; i++)
                                            {
                                                var oficina = oficinasRangoFiltradas[i];
                                                var claseActivo = i == indiceOficinaRangoSeleccionada ? "active" : string.Empty;
                                                <button type="button" class="list-group-item list-group-item-action @claseActivo" @onclick="() => SeleccionarOficinaRango(oficina)">
                                                    @oficina.Nombre
                                                </button>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="form-text text-muted">@MensajeOficinaRango</div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Año</label>
                                <InputNumber @bind-Value="rangoActual.Anio" class="form-control" @oninput="OnParametrosSugerenciaRangoCambio" />
                            </div>
                            <div class="col-md-8">
                                <label class="form-label text-muted">Nombre de Serie (Auto-generado)</label>
                                <input type="text" class="form-control bg-light" value="@rangoActual.NombreRango" readonly />
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-bold">Desde</label>
                                <InputNumber @bind-Value="rangoActual.NumeroInicio" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Hasta</label>
                                <InputNumber @bind-Value="rangoActual.NumeroFin" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Cantidad a Asignar</label>
                                <InputNumber @bind-Value="cantidadSugeridaSolicitada" class="form-control" min="0" @oninput="OnParametrosSugerenciaRangoCambio" />
                                <div class="form-text">Usada para calcular la sugerencia del rango.</div>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Último Utilizado</label>
                                <InputNumber @bind-Value="rangoActual.UltimoUtilizado" class="form-control" />
                            </div>

                            @if (rangoActual.IdTipo > 0 && rangoActual.Anio > 0)
                            {
                                <div class="col-12">
                                    <div class="alert alert-info border mb-0">
                                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
                                            <h6 class="mb-0 fw-bold"><i class="bi bi-lightbulb me-1"></i>Sugerencia de asignación para oficinas internas</h6>
                                            <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AplicarSugerenciaRango" disabled="@(!PuedeAplicarSugerencia)">
                                                <i class="bi bi-magic me-1"></i>Aplicar sugerencia
                                            </button>
                                        </div>

                                        @if (!string.IsNullOrWhiteSpace(mensajeErrorSugerenciaRango))
                                        {
                                            <div class="text-danger small mb-2">@mensajeErrorSugerenciaRango</div>
                                        }

                                        <div class="row g-2 small">
                                            <div class="col-md-3"><span class="text-muted">Cupo total:</span> <strong>@sugerenciaRango.CupoTotal.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-3"><span class="text-muted">Ya asignado (todas):</span> <strong>@sugerenciaRango.ConsumoTotalAsignado.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-3"><span class="text-muted">Usado por otras oficinas:</span> <strong>@sugerenciaRango.ConsumoOtrasOficinas.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-3 text-success"><span class="text-muted">Saldo disponible:</span> <strong>@sugerenciaRango.SaldoDisponible.ToString("N0", CulturaUi)</strong></div>
                                        </div>

                                        <hr class="my-2" />

                                        <div class="row g-2 small">
                                            <div class="col-md-4"><span class="text-muted">Inicio sugerido:</span> <strong>@sugerenciaRango.NumeroInicioSugerido.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-4"><span class="text-muted">Fin sugerido:</span> <strong>@sugerenciaRango.NumeroFinSugerido.ToString("N0", CulturaUi)</strong></div>
                                            <div class="col-md-4"><span class="text-muted">Cantidad sugerida:</span> <strong>@sugerenciaRango.CantidadSugerida.ToString("N0", CulturaUi)</strong></div>
                                        </div>

                                        @if (MostrarAvisoExisteRangoActivo)
                                        {
                                            <div class="small text-primary mt-2">
                                                <i class="bi bi-info-circle me-1"></i>
                                                Esta oficina ya tiene un rango activo (@(sugerenciaRango.RangoActivoNumeroInicio ?? 0)-@(sugerenciaRango.RangoActivoNumeroFin ?? 0)).
                                                Solo se sugiere crear un nuevo rango cuando el actual se agote.
                                            </div>
                                        }

                                        @if (MostrarAvisoRangoAgotado)
                                        {
                                            <div class="small text-warning mt-2">
                                                <i class="bi bi-exclamation-triangle me-1"></i>
                                                El rango activo de esta oficina ya está agotado (@(sugerenciaRango.RangoActivoUltimoUtilizado ?? 0) usados de @(sugerenciaRango.RangoActivoNumeroFin ?? 0)).
                                                Debe crear un nuevo rango para continuar emitiendo documentos de este tipo.
                                            </div>
                                        }

                                        @if (sugerenciaRango.SugerenciaRecortadaPorSaldo)
                                        {
                                            <div class="small text-warning mt-2">
                                                <i class="bi bi-exclamation-triangle me-1"></i>
                                                La cantidad solicitada supera el saldo disponible y fue ajustada automáticamente.
                                            </div>
                                        }
                                        else if (sugerenciaRango.SaldoDisponible == 0)
                                        {
                                            <div class="small text-danger mt-2">
                                                <i class="bi bi-x-octagon me-1"></i>
                                                No hay saldo disponible para este tipo y año.
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="mt-4 form-check form-switch">
                            <InputCheckbox @bind-Value="rangoActual.Activo" class="form-check-input" id="checkActivo" />
                            <label class="form-check-label" for="checkActivo">Rango Activo para consumo</label>
                        </div>

                        <div class="modal-footer px-0 pb-0 mt-3">
                            <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                            <button type="button" class="btn btn-primary" @onclick="Guardar" disabled="@procesando">
                                @if (procesando)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                Guardar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@* --- MODAL CUPO --- *@
@if (mostrarModalCupo)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Configurar Cupo Anual</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalCupo"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrWhiteSpace(mensajeErrorModalCupo))
                    {
                        <div class="alert alert-danger" role="alert">@mensajeErrorModalCupo</div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tipo de Documento</label>
                        <InputSelect @bind-Value="cupoTipoSeleccionado" class="form-select" @oninput="OnCupoFiltroCambio">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var tipo in tipos)
                            {
                                <option value="@tipo.IdTipo">@tipo.Nombre</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Año</label>
                        <InputNumber @bind-Value="cupoAnio" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Cantidad Total (Cupo)</label>
                        <InputNumber @bind-Value="cupoCantidad" class="form-control form-control-lg" />
                    </div>

                    @if (cupoTipoSeleccionado > 0)
                    {
                        <div class="alert alert-light border">
                            <div class="d-flex justify-content-between">
                                <span>Consumido actualmente:</span>
                                <strong>@cupoConsumido</strong>
                            </div>
                            <div class="d-flex justify-content-between mt-1 text-success">
                                <span>Disponible si guarda:</span>
                                <strong>@(Math.Max(0, cupoCantidad - cupoConsumido))</strong>
                            </div>
                        </div>
                    }

                    <div class="modal-footer px-0 pb-0">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModalCupo">Cancelar</button>
                        <button type="button" class="btn btn-success" @onclick="GuardarCupo" disabled="@procesando">
                            @if (procesando)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Guardar Cupo
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // --- VARIABLES DE ESTADO PARA TABS ---
    private enum TabConfig { Rangos, Cupos, Bitacora }
    private TabConfig tabActiva = TabConfig.Rangos;

    private void CambiarTab(TabConfig tab)
    {
        tabActiva = tab;
        // Limpiar mensajes al cambiar para no confundir
        LimpiarMensajes();
    }

    // --- VARIABLES GENERALES ---
    private List<MaeNumeracionRango> listaRangos = new();
    private List<CatTipoDocumento> tipos = new();
    private List<CatOficina> oficinas = new();
    private MaeNumeracionRango rangoActual = new();
    private List<MaeNumeracionBitacora> bitacora = new();
    private List<CupoLibroMayorItem> libroMayorCupos = new();

    private bool mostrarModal;
    private bool mostrarModalCupo;
