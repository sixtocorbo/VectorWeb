    private async Task FiltrarOficinasRango(ChangeEventArgs e)
    {
        oficinaBusquedaRango = e.Value?.ToString() ?? string.Empty;
        rangoActual.IdOficina = null;
        indiceOficinaRangoSeleccionada = -1;

        if (string.IsNullOrWhiteSpace(oficinaBusquedaRango))
        {
            oficinasRangoFiltradas.Clear();
            await RefrescarSugerenciaRangoAsync();
            return;
        }
        oficinasRangoFiltradas = BuscarOficinasRango(oficinaBusquedaRango).Take(8).ToList();
        var coincidenciaExacta = oficinas.FirstOrDefault(oficina => string.Equals(oficina.Nombre, oficinaBusquedaRango, StringComparison.OrdinalIgnoreCase));
        if (coincidenciaExacta != null) rangoActual.IdOficina = coincidenciaExacta.IdOficina;
        await RefrescarSugerenciaRangoAsync();
    }

    private async Task SeleccionarOficinaRango(CatOficina oficina)
    {
        rangoActual.IdOficina = oficina.IdOficina;
        oficinaBusquedaRango = oficina.Nombre ?? string.Empty;
        oficinasRangoFiltradas.Clear();
        indiceOficinaRangoSeleccionada = -1;
        await RefrescarSugerenciaRangoAsync();
    }
    private string MensajeOficinaRango
    {
        get
        {
            if (rangoActual.IdOficina is not null) return "La numeración se aplicará únicamente a la oficina seleccionada.";
            return "Seleccione una oficina específica para este rango.";
        }
    }

    private void MostrarSugerenciasOficinaRango()
    {
        if (!string.IsNullOrWhiteSpace(oficinaBusquedaRango))
            oficinasRangoFiltradas = BuscarOficinasRango(oficinaBusquedaRango).Take(8).ToList();
    }

    private async Task ManejarTecladoOficinasRango(KeyboardEventArgs e)
    {
        if (!oficinasRangoFiltradas.Any()) return;
        if (e.Key == "ArrowDown") { indiceOficinaRangoSeleccionada = Math.Min(indiceOficinaRangoSeleccionada + 1, oficinasRangoFiltradas.Count - 1); return; }
        if (e.Key == "ArrowUp") { indiceOficinaRangoSeleccionada = Math.Max(indiceOficinaRangoSeleccionada - 1, 0); return; }
        if (e.Key == "Enter" && indiceOficinaRangoSeleccionada >= 0) { await SeleccionarOficinaRango(oficinasRangoFiltradas[indiceOficinaRangoSeleccionada]); return; }
        if (e.Key == "Escape") { oficinasRangoFiltradas.Clear(); indiceOficinaRangoSeleccionada = -1; }
    }

    private IEnumerable<CatOficina> BuscarOficinasRango(string terminoBusqueda)
    {
        var palabras = terminoBusqueda.Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        if (palabras.Length == 0) return Enumerable.Empty<CatOficina>();
        return oficinas.Where(oficina => palabras.All(palabra => (oficina.Nombre?.Contains(palabra, StringComparison.OrdinalIgnoreCase) ?? false))).OrderBy(oficina => oficina.Nombre);
    }

    private async Task Guardar()
    {
        mensajeErrorModalRango = string.Empty;
        procesando = true;
        try
        {
            if (rangoActual.IdTipo <= 0) { mensajeErrorModalRango = "Seleccione un tipo."; return; }
            if (!rangoActual.IdOficina.HasValue) { mensajeErrorModalRango = "Seleccione una oficina."; return; }
            if (rangoActual.NumeroInicio > rangoActual.NumeroFin) { mensajeErrorModalRango = "Rango inválido (Inicio > Fin)."; return; }

            var resultado = await RangoService.GuardarRangoAsync(rangoActual);
            if (!resultado.Exitoso) { mensajeErrorModalRango = resultado.Mensaje; return; }

            mostrarModal = false;
            mensajeOk = "Rango guardado correctamente.";
            await CargarTodo();
        }
        finally { procesando = false; }
    }

