    private IEnumerable<CatOficina> BuscarOficinasRango(string terminoBusqueda)
    {
        var palabras = terminoBusqueda.Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        if (palabras.Length == 0) return Enumerable.Empty<CatOficina>();
        return oficinas.Where(oficina => palabras.All(palabra => (oficina.Nombre?.Contains(palabra, StringComparison.OrdinalIgnoreCase) ?? false))).OrderBy(oficina => oficina.Nombre);
    }

    private static bool CoincideOficinaSinImportarOrden(string? nombreOficina, string? busqueda)
    {
        if (string.IsNullOrWhiteSpace(nombreOficina) || string.IsNullOrWhiteSpace(busqueda)) return false;
        var tokensBusqueda = Regex.Split(busqueda.Trim(), @"\s+").Where(token => !string.IsNullOrWhiteSpace(token));
        return tokensBusqueda.All(token => nombreOficina.Contains(token, StringComparison.OrdinalIgnoreCase));
    }

