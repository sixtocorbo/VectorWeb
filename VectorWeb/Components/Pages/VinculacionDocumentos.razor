@page "/documentos/vinculacion"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "vinculacion.gestionar")]
@using Microsoft.EntityFrameworkCore
@using VectorWeb.Models
@using VectorWeb.Repositories
@using VectorWeb.Services
@inject IRepository<MaeDocumento> RepoDocs
@inject IRepository<CatTipoDocumento> RepoTipos
@inject DocumentoVinculacionService VinculacionService
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Vinculación de Documentos</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-diagram-3"></i> Vinculación de Documentos</h3>

    @if (docPadre != null && hijosSeleccionados.Any())
    {
        <button class="btn btn-primary animate__animated animate__pulse animate__infinite shadow"
                @onclick="EjecutarVinculacion"
                disabled="@procesando">
            @if (procesando)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
            }
            else
            {
                <i class="bi bi-link-45deg me-2"></i>
            }
            Confirmar Vinculación (@hijosSeleccionados.Count)
        </button>
    }
</div>

@if (!string.IsNullOrWhiteSpace(mensajeResultado))
{
    <div class="alert @(resultadoExitoso ? "alert-success" : "alert-danger") alert-dismissible fade show shadow-sm" role="alert">
        @mensajeResultado
        <button type="button" class="btn-close" @onclick="() => mensajeResultado = null"></button>
    </div>
}

<div class="row g-4">
    @* --- COLUMNA 1: DOCUMENTO PADRE --- *@
    <div class="col-lg-6">
        <div class="card h-100 shadow-sm border-primary">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <span><i class="bi bi-1-circle me-2"></i>Documento Principal (Padre)</span>
                @if (buscandoPadre)
                {
                    <span class="spinner-border spinner-border-sm text-white"></span>
                }
            </div>
            <div class="card-body">
                @if (docPadre == null)
                {
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                        <input class="form-control"
                               placeholder="Buscar por N°, Asunto o ID..."
                               @oninput="(e) => OnBuscar(e, true)" />
                    </div>

                    <div class="list-group list-group-flush overflow-auto" style="max-height: 400px;">
                        @if (resultadosPadre.Count == 0 && !string.IsNullOrEmpty(txtBusquedaPadre))
                        {
                            <div class="text-center text-muted py-3">No se encontraron documentos.</div>
                        }
                        else if (string.IsNullOrEmpty(txtBusquedaPadre))
                        {
                            <div class="text-center text-muted py-3 small">
                                <i class="bi bi-keyboard mb-2 d-block fs-4"></i>
                                Escriba para buscar...
                            </div>
                        }
                        else
                        {
                            @foreach (var doc in resultadosPadre)
                            {
                                <button type="button" class="list-group-item list-group-item-action" @onclick="() => SeleccionarPadre(doc)">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1 text-primary fw-bold">
                                            <span class="badge bg-light text-dark border me-1">#@doc.IdDocumento</span>
                                            @(string.IsNullOrEmpty(doc.NumeroOficial) ? "S/N" : doc.NumeroOficial)
                                        </h6>
                                        <small class="text-muted">@ObtenerNombreTipo(doc.IdTipo)</small>
                                    </div>
                                    <p class="mb-1 small text-truncate">@doc.Asunto</p>
                                </button>
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4 bg-light rounded border border-primary border-opacity-25 animate__animated animate__fadeIn">
                        <div class="mb-2"><i class="bi bi-file-earmark-check fs-1 text-primary"></i></div>
                        <h4 class="text-primary">@(string.IsNullOrEmpty(docPadre.NumeroOficial) ? "S/N" : docPadre.NumeroOficial)</h4>
                        <p class="card-text px-3 fw-bold">@docPadre.Asunto</p>
                        <span class="badge bg-primary mb-3">@ObtenerNombreTipo(docPadre.IdTipo)</span>
                        <div class="small text-muted mb-3">ID Interno: @docPadre.IdDocumento</div>
                        <div>
                            <button class="btn btn-sm btn-outline-danger" @onclick="CancelarPadre">
                                <i class="bi bi-x-circle me-1"></i>Cambiar Padre
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @* --- COLUMNA 2: DOCUMENTOS HIJOS --- *@
    <div class="col-lg-6">
        <div class="card h-100 shadow-sm @(docPadre == null ? "opacity-50" : "border-success")">
            <div class="card-header @(docPadre == null ? "bg-secondary" : "bg-success") text-white d-flex justify-content-between align-items-center">
                <span><i class="bi bi-2-circle me-2"></i>Documentos a Vincular (Hijos)</span>
                @if (buscandoHijos)
                {
                    <span class="spinner-border spinner-border-sm text-white"></span>
                }
            </div>
            <div class="card-body">
                @if (docPadre == null)
                {
                    <div class="d-flex flex-column align-items-center justify-content-center h-100 text-muted p-5">
                        <i class="bi bi-arrow-left-circle fs-1 mb-2"></i>
                        <p>Seleccione primero un documento padre.</p>
                    </div>
                }
                else
                {
                    @if (hijosSeleccionados.Any())
                    {
                        <div class="mb-3 p-2 border rounded bg-success bg-opacity-10">
                            <small class="text-success fw-bold d-block mb-2">
                                <i class="bi bi-check-circle me-1"></i> Seleccionados (@hijosSeleccionados.Count):
                            </small>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var doc in hijosSeleccionados)
                                {
                                    <span class="badge bg-white text-success border border-success pe-1 shadow-sm d-flex align-items-center">
                                        <span class="text-truncate" style="max-width: 150px;">
                                            @(string.IsNullOrEmpty(doc.NumeroOficial) ? $"#{doc.IdDocumento}" : doc.NumeroOficial)
                                        </span>
                                        <button class="btn btn-link text-danger p-0 ms-2" @onclick="() => ToggleHijo(doc)" title="Quitar">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </button>
                                    </span>
                                }
                            </div>
                        </div>
                    }

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                        <input class="form-control"
                               placeholder="Buscar por N°, Asunto o descripción..."
                               @oninput="(e) => OnBuscar(e, false)" />
                    </div>

                    <div class="list-group list-group-flush overflow-auto" style="max-height: 350px;">
                        @foreach (var doc in resultadosHijos)
                        {
                            var estaSeleccionado = hijosSeleccionados.Any(h => h.IdDocumento == doc.IdDocumento);
                            var claseItem = estaSeleccionado ? "list-group-item-success" : "list-group-item-action";
                            var icono = estaSeleccionado ? "bi-check-circle-fill" : "bi-plus-circle";

                            <button type="button" class="list-group-item @claseItem d-flex justify-content-between align-items-center"
                                    @onclick="() => ToggleHijo(doc)">
                                <div class="text-truncate me-2">
                                    <div class="fw-bold">
                                        <span class="badge bg-light text-dark border me-1" style="font-size: 0.7em;">#@doc.IdDocumento</span>
                                        @(string.IsNullOrEmpty(doc.NumeroOficial) ? "S/N" : doc.NumeroOficial)
                                    </div>
                                    <div class="small text-muted text-truncate">@doc.Asunto</div>
                                </div>
                                <i class="bi @icono fs-5 @(estaSeleccionado ? "text-success" : "text-muted")"></i>
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (ultimoResultado?.Detalles?.Any() == true)
{
    <div class="card mt-4 border-info shadow-sm animate__animated animate__fadeInUp">
        <div class="card-header bg-info text-dark"><strong><i class="bi bi-info-circle"></i> Resultado</strong></div>
        <div class="card-body bg-light">
            <p class="mb-2"><strong>Registros afectados:</strong> @ultimoResultado.TotalRegistrosAfectados</p>
            <ul class="mb-0 small">
                @foreach (var detalle in ultimoResultado.Detalles)
                {
                    <li>Doc #@detalle.IdDocumento: <span class="fw-bold">@detalle.Estado</span></li>
                }
            </ul>
        </div>
    </div>
}

@code {
    private Dictionary<int, string> nombresTipo = new();
    private MaeDocumento? docPadre;
    private List<MaeDocumento> hijosSeleccionados = new();
    private List<MaeDocumento> resultadosPadre = new();
    private List<MaeDocumento> resultadosHijos = new();
    private string txtBusquedaPadre = "";
    private string txtBusquedaHijos = "";
    private bool procesando, buscandoPadre, buscandoHijos, resultadoExitoso;
    private string? mensajeResultado;
    private VinculacionResultado? ultimoResultado;
    private System.Threading.Timer? _debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        // Usamos el nuevo método seguro
        var tipos = await RepoTipos.GetAllAsync();
        nombresTipo = tipos.ToDictionary(t => t.IdTipo, t => t.Nombre ?? "Sin nombre");
    }
    private string ObtenerNombreTipo(int id) =>
    nombresTipo.TryGetValue(id, out var nombre) ? nombre : "Tipo desconocido";

    private void OnBuscar(ChangeEventArgs e, bool esPadre)
    {
        var texto = e.Value?.ToString() ?? string.Empty;
        if (esPadre) txtBusquedaPadre = texto; else txtBusquedaHijos = texto;

        _debounceTimer?.Dispose();
        _debounceTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () => await EjecutarBusqueda(texto, esPadre));
        }, null, 300, System.Threading.Timeout.Infinite);
    }

    private async Task EjecutarBusqueda(string texto, bool esPadre)
    {
        if (string.IsNullOrWhiteSpace(texto) || texto.Length < 2)
        {
            if (esPadre) resultadosPadre.Clear(); else resultadosHijos.Clear();
            StateHasChanged();
            return;
        }

        if (esPadre) buscandoPadre = true; else buscandoHijos = true;
        StateHasChanged();

        // BLINDAJE: Usamos GetFilteredAsync para asegurar que el DbContext se maneje correctamente
        var resultados = await RepoDocs.GetFilteredAsync(d =>
            (d.NumeroOficial != null && d.NumeroOficial.Contains(texto)) ||
            (d.Asunto != null && d.Asunto.Contains(texto)) ||
            (d.IdDocumento.ToString() == texto)
        );

        var final = resultados.ToList();

        if (esPadre) { resultadosPadre = final; buscandoPadre = false; }
        else
        {
            if (docPadre != null) final.RemoveAll(x => x.IdDocumento == docPadre.IdDocumento);
            resultadosHijos = final;
            buscandoHijos = false;
        }

        StateHasChanged();
    }

    private void SeleccionarPadre(MaeDocumento doc)
    {
        docPadre = doc;
        resultadosPadre.Clear();
        txtBusquedaPadre = "";
    }

    private void CancelarPadre() => docPadre = null;

    private void ToggleHijo(MaeDocumento doc)
    {
        if (hijosSeleccionados.Any(x => x.IdDocumento == doc.IdDocumento))
            hijosSeleccionados.RemoveAll(x => x.IdDocumento == doc.IdDocumento);
        else
            hijosSeleccionados.Add(doc);
    }

    private async Task EjecutarVinculacion()
    {
        if (docPadre == null || !hijosSeleccionados.Any()) return;
        procesando = true;
        try
        {
            ultimoResultado = await VinculacionService.VincularAsync(docPadre.IdDocumento, hijosSeleccionados.Select(h => h.IdDocumento));
            mensajeResultado = ultimoResultado.Mensaje;
            resultadoExitoso = ultimoResultado.Exitoso;
            if (resultadoExitoso) { docPadre = null; hijosSeleccionados.Clear(); }
        }
        finally { procesando = false; StateHasChanged(); }
    }

    public void Dispose() => _debounceTimer?.Dispose();
}