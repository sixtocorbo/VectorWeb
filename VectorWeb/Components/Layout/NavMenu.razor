@using Microsoft.AspNetCore.Components.Authorization
@using VectorWeb.Auth
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navegador

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="bi bi-vector-pen me-2"></i>Vector
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column d-flex min-vh-100">
        <AuthorizeView>
            <Authorized Context="authContext">
                <div class="nav-section-title px-4 mt-2">OPERACIONES</div>

                <AuthorizeView Policy="documentos.ver">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="documentos">
                            <span class="bi bi-documentos-nav-menu" aria-hidden="true"></span> Documentos
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Policy="vinculacion.gestionar">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="documentos/vinculacion">
                            <span class="bi bi-vinculacion-nav-menu" aria-hidden="true"></span> Vinculación
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Policy="reclusos.gestionar">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="reclusos">
                            <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Reclusos
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Policy="renovaciones.gestionar">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="renovaciones">
                            <span class="bi bi-art120-nav-menu" aria-hidden="true"></span> Art. 120
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Policy="configuracion.catalogos">
                    <div class="nav-section-title px-4 mt-3">CATÁLOGOS</div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="configuracion/oficinas">
                            <span class="bi bi-oficinas-nav-menu" aria-hidden="true"></span> Oficinas
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="configuracion/tipos-documento">
                            <span class="bi bi-tipos-documento-nav-menu" aria-hidden="true"></span> Tipos de Doc.
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="configuracion/estados">
                            <span class="bi bi-estados-nav-menu" aria-hidden="true"></span> Estados
                        </NavLink>
                    </div>
                </AuthorizeView>

                <div class="nav-section-title px-4 mt-3">SISTEMA</div>

                <AuthorizeView Policy="configuracion.rangos">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="configuracion/rangos">
                            <span class="bi bi-rangos-nav-menu" aria-hidden="true"></span> Rangos
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Policy="seguridad.usuarios_roles">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="configuracion/usuarios">
                            <span class="bi bi-usuarios-nav-menu" aria-hidden="true"></span> Usuarios y Roles
                        </NavLink>
                    </div>
                </AuthorizeView>
                <AuthorizeView Policy="seguridad.usuarios_roles">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="configuracion/auditoria-permisos">
                            <span class="bi bi-shield-exclamation" aria-hidden="true"></span> Auditoría Permisos
                        </NavLink>
                    </div>
                </AuthorizeView>


                <div class="mt-auto p-3 border-top border-secondary border-opacity-25">
                    <div class="text-light small px-3 mb-2 opacity-75">
                        Conectado como: <br />
                        <strong class="text-white">@authContext.User.Identity?.Name</strong>
                    </div>
                    <div class="nav-item px-3 nav-system-action">
                        <button class="btn btn-outline-warning btn-sm w-100 d-flex align-items-center justify-content-center" @onclick="CerrarSesion">
                            <i class="bi bi-box-arrow-left me-2"></i> Cerrar Sesión
                        </button>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3 mt-4">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-person-lock" aria-hidden="true"></span> Iniciar Sesión
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private async Task CerrarSesion()
    {
        if (AuthStateProvider is CustomAuthStateProvider auth)
        {
            await auth.MarkUserAsLoggedOutAsync();
        }

        Navegador.NavigateTo("/login");
    }
}
